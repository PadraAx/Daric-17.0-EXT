<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_ext_public_view_form" model="ir.ui.view">
            <field name="name">hr.employee.ext.public.view.form</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_location_id']" position="after">
                    <field name="sit_taker"/>
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="attributes">
                    <attribute name="options">{'no_open': True, 'no_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='work_location_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//page[@name='public']//field[@name='work_location_id']" position="attributes">
                    <attribute name="string">Station</attribute>
                </xpath>
                <xpath expr="//page[@name='public']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>

            </field>
        </record>

        <record id="hr_employee_ext_public_inherit_org_chart" model="ir.ui.view">
            <field name="name">hr.employee.ext.public.inherit.org_chart</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr_org_chart.hr_employee_public_view_form_inherit_org_chart"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='o_employee_right']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="employee_ext_res_users_inherit_org_chart" model="ir.ui.view">
            <field name="name">res.users.employee.ext.inherit.org_chart</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr_org_chart.res_users_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='o_employee_right']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_employee_ext_public_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.ext.public.tree.view</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_employee_ext_public_employee_kanban" model="ir.ui.view">
            <field name="name">hr.employee.ext.kanban</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="create">0</attribute>
                </xpath>
                <xpath expr="//field[@name='job_title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='job_title']" position="after">
                    <field name="job_id"/>
                </xpath>
            </field>
        </record>

        <record id="hr_employee_ext_public_action" model="ir.actions.act_window">
            <field name="name">Public Employees</field>
            <field name="res_model">hr.employee.public</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'chat_icon': True}</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="hr.hr_employee_public_view_search"/>
        </record>

        <record id="hr.hr_employee_public_action" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'chat_icon': True, 'search_default_my_team': 1}</field>
        </record>

    </data>
</odoo>
