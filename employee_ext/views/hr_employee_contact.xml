<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_contact_form" model="ir.ui.view">
            <field name="name">hr.employee.contact.form</field>
            <field name="model">hr.employee.contact</field>
            <field name="arch" type="xml">
                <form string="Employee Contact Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="job_id"/>
                            </group>
                            <group>
                                <field name="contact_category"/>
                                <field name="communication"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_contact_tree" model="ir.ui.view">
            <field name="name">hr.employee.contact.tree</field>
            <field name="model">hr.employee.contact</field>
            <field name="arch" type="xml">
                <tree string="Employee Contact List">
                    <field name="company_id"/>
                    <field name="job_id"/>
                    <field name="contact_category"/>
                    <field name="communication"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_contact_action" model="ir.actions.act_window">
            <field name="name">Employee Contact</field>
            <field name="res_model">hr.employee.contact</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
