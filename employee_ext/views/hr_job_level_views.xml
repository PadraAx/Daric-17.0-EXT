<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_job_level_form" model="ir.ui.view">
            <field name="name">hr.job.level.form</field>
            <field name="model">hr.job.level</field>
            <field name="arch" type="xml">
                <form string="Job Level Form">
                    <sheet>
                        <div class="oe_title mb32">
                            <h1>
                                <label for="name"/>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_job_level_tree" model="ir.ui.view">
            <field name="name">hr.job.level.tree</field>
            <field name="model">hr.job.level</field>
            <field name="arch" type="xml">
                <tree string="Job Level Tree" sample="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_job_level_filter" model="ir.ui.view">
            <field name="name">hr.job.level.search</field>
            <field name="model">hr.job.level</field>
            <field name="arch" type="xml">
                <search string="Job Level Search">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="hr_job_level_action" model="ir.actions.act_window">
            <field name="name">Job Level</field>
            <field name="res_model">hr.job.level</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
