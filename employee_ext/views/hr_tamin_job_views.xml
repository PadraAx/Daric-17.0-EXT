<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_tamin_job_form" model="ir.ui.view">
            <field name="name">hr.tamin.job.form</field>
            <field name="model">hr.tamin.job</field>
            <field name="arch" type="xml">
                <form string="Tamin Job Form">
                    <sheet>
                        <div class="oe_title mb32">
                            <h1><field name="name" placeholder="Name"/></h1>
                        </div>
                        <group>
                            <group>  
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_tamin_job_tree" model="ir.ui.view">
            <field name="name">hr.tamin.job.tree</field>
            <field name="model">hr.tamin.job</field>
            <field name="arch" type="xml">
                <tree string="Tamin Job Tree" sample="1">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_tamin_job_filter" model="ir.ui.view">
            <field name="name">hr.tamin.job.search</field>
            <field name="model">hr.tamin.job</field>
            <field name="arch" type="xml">
                <search string="Tamin Job Search">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="hr_tamin_job_action" model="ir.actions.act_window">
            <field name="name">Tamin Job</field>
            <field name="res_model">hr.tamin.job</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
