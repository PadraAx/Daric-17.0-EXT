<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_dependent_view_tree" model="ir.ui.view">
            <field name="name">employee.dependent.view.tree</field>
            <field name="model">hr.employee.dependent</field>
            <field name="arch" type="xml">
                <tree string="Employee dependent">
                      <field name="name"/>
                      <field name="dob"/>
                      <field name="gender"/>
                      <field name="relationship"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_dependent_view_form" model="ir.ui.view">
            <field name="name">employee.dependent.view.form</field>
            <field name="model">hr.employee.dependent</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Dependent Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="dob"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="relationship"/>
                            </group>
                        </group>
                        <group string="EMERGENCY">
                            <group>
                                <field name="emergency"/>
                            </group>
                            <group>
                                <field name="emergency_contact" invisible="emergency == False"/>
                                <field name="emergency_phone" invisible="emergency == False"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_dependent_action" model="ir.actions.act_window">
            <field name="name">Employee Dependent</field>
            <field name="res_model">hr.employee.dependent</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
