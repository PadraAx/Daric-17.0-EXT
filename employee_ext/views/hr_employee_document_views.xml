<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_document_view_tree" model="ir.ui.view">
            <field name="name">employee.document.view.tree</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <tree string="Employee Document" editable="bottom">
                      <field name="document_type_id"/>
                      <field name="document_no"/>
                      <field name="expiry_date"/>
                      <field name="data"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_document_view_form" model="ir.ui.view">
            <field name="name">employee.document.view.form</field>
            <field name="model">hr.employee.document</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                          <group>
                              <field name="document_type_id"/>
                              <field name="document_no"/>
                          </group>
                          <group>
                              <field name="filename" invisible="1"/>
                              <field name="expiry_date"/>
                              <field name="data" filename="filename"/>
                          </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_document_action" model="ir.actions.act_window">
            <field name="name">Employee Document</field>
            <field name="res_model">hr.employee.document</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
