<odoo>
    <data>
        <record id="hr_res_partner_employee_ext_form" model="ir.ui.view">
            <field name="name">res.partner.employee.ext.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page name="details" string="Details">
                        <group>
                            <field name="is_location"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//div[hasclass('o_row')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="company_id"/>
                </xpath>
            </field>
        </record>

        <record id="hr_res_partner_employee_ext_search" model="ir.ui.view">
            <field name="name">res.partner.employee.ext.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <filter name="company_type"/>
                </field>
            </field>
        </record>

        <record id="action_work_address_partner_employee_ext" model="ir.actions.act_window">
            <field name="name">Work Address</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('is_location', '=', True)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
        </record>

    </data>
</odoo>