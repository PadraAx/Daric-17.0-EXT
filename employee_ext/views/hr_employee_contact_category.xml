<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_contact_category_form" model="ir.ui.view">
            <field name="name">hr.employee.contact.category.form</field>
            <field name="model">hr.employee.contact.category</field>
            <field name="arch" type="xml">
                <form string="Employee Contact Category Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_contact_category_tree" model="ir.ui.view">
            <field name="name">hr.employee.contact.category.tree</field>
            <field name="model">hr.employee.contact.category</field>
            <field name="arch" type="xml">
                <tree string="Employee Contact Category List">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_contact_category_action" model="ir.actions.act_window">
            <field name="name">Employee Contact Category</field>
            <field name="res_model">hr.employee.contact.category</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
