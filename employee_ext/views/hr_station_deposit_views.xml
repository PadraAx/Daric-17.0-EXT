<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_station_deposit_form" model="ir.ui.view">
            <field name="name">hr.station.deposit.form</field>
            <field name="model">hr.station.deposit</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="station_id" />
                                <field name="from_date" />
                                <field name="deposite_lc" />
                                <field name="active_status" />
                            </group>
                            <group>
                                <field name="exchange_rate" />
                                <field name="to_date" />
                                <field name="deposite_usd" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_station_deposit_tree" model="ir.ui.view">
            <field name="name">hr.station.deposit.tree</field>
            <field name="model">hr.station.deposit</field>
            <field name="arch" type="xml">
                <tree string="Station Deposit">
                    <field name="station_id"/>
                    <field name="exchange_rate" />
                    <field name="from_date" />
                    <field name="to_date" />
                    <field name="deposite_lc" />
                    <field name="deposite_usd" />
                    <field name="active_status" />
                </tree>
            </field>
        </record>

        <record id="hr_station_deposit_action" model="ir.actions.act_window">
            <field name="name">Station Deposit</field>
            <field name="res_model">hr.station.deposit</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
