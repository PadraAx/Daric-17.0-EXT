<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_document_type_view_tree" model="ir.ui.view">
            <field name="name">employee.document.type.tree</field>
            <field name="model">hr.document.type</field>
            <field name="arch" type="xml">
                <tree string="Document Types" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_document_type_view_form" model="ir.ui.view">
            <field name="name">employee.document.type.form</field>
            <field name="model">hr.document.type</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_document_type_action" model="ir.actions.act_window">
            <field name="name">Document Types</field>
            <field name="res_model">hr.document.type</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>
