<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_station_rent_form" model="ir.ui.view">
            <field name="name">hr.station.rent.form</field>
            <field name="model">hr.station.rent</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="station_id" />
                                <field name="from_date" />
                                <field name="monthly_rent_lc" />
                                <field name="monthly_rent_usd" force_save="1"/>
                                <field name="active_status" />
                            </group>
                            <group>
                                <field name="exchange_rate" />
                                <field name="to_date" />
                                <field name="annual_rent_lc" force_save="1"/>
                                <field name="annual_rent_usd" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_station_rent_tree" model="ir.ui.view">
            <field name="name">hr.station.rent.tree</field>
            <field name="model">hr.station.rent</field>
            <field name="arch" type="xml">
                <tree string="Station Rent">
                    <field name="station_id"/>
                    <field name="exchange_rate" />
                    <field name="from_date" />
                    <field name="to_date" />
                    <field name="monthly_rent_lc" />
                    <field name="annual_rent_lc" />
                    <field name="monthly_rent_usd" />
                    <field name="annual_rent_usd" />
                    <field name="active_status" />
                </tree>
            </field>
        </record>

        <record id="hr_station_rent_action" model="ir.actions.act_window">
            <field name="name">Station Rent</field>
            <field name="res_model">hr.station.rent</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
