<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_religion_view_tree" model="ir.ui.view">
            <field name="name">religion.tree</field>
            <field name="model">hr.religion</field>
            <field name="arch" type="xml">
                <tree string="Religion">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_religion_view_form" model="ir.ui.view">
            <field name="name">religion.form</field>
            <field name="model">hr.religion</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_religion_action" model="ir.actions.act_window">
            <field name="name">Religion</field>
            <field name="res_model">hr.religion</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
