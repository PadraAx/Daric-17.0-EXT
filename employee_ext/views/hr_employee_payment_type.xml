<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_payment_type_view_form" model="ir.ui.view">
            <field name="name">employee.payment.type.view.form</field>
            <field name="model">hr.employee.payment.type</field>
            <field name="arch" type="xml">
                <form string="Employee Payment Type Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_employee_payment_type_view_tree" model="ir.ui.view">
            <field name="name">employee.payment.type.view.tree</field>
            <field name="model">hr.employee.payment.type</field>
            <field name="arch" type="xml">
                <tree string="Employee Payment Type List">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_payment_type_action" model="ir.actions.act_window">
            <field name="name">Employee Payment Type</field>
            <field name="res_model">hr.employee.payment.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
