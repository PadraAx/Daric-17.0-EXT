<odoo>
    <data>     

        <record id="view_department_ext_form" model="ir.ui.view">
            <field name="name">hr.department.ext.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="replace">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="child_ids" invisible="1"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="hrbp_id" widget="many2one_avatar_user"/>
                            <field name="hrbp_associate_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="manager_id" widget="many2one_avatar_user"/>
                            <field name="sequence"/>
                            <field name="layer_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="color" widget="color_picker" string="Color"/>
                            <field name="local_name"/>
                        </group>
                    </group>
                    <div invisible="not id or id and not child_ids and not parent_id">
                        <widget name="hr_department_chart"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_ext_department_tree" model="ir.ui.view">
            <field name="name">hr.ext.department.tree</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="layer_id" options="{'no_create': True, 'no_edit': True}"/>
                </xpath>
                <xpath expr="//field[last()]" position="after">
                    <field name="sequence" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>