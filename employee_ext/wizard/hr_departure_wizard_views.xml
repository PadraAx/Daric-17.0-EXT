<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_ext_departure_wizard_form" model="ir.ui.view">
            <field name="name">hr.employee.ext.departure.wizard.form</field>
            <field name="model">hr.departure.wizard</field>
            <field name="inherit_id" ref="hr.hr_departure_wizard_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='departure_date']" position="after">
                    <field name="termination_date"/>
                </xpath>
                <xpath expr="//field[@name='set_date_end']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='set_date_end']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='activities']" position="inside">
                    <div><field name="apply_contr_end_date"/><label for="apply_contr_end_date" string="Contract"/></div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
