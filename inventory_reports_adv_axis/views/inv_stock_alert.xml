<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_inventory_stock_alert_form" model="ir.ui.view">
            <field name="name">inventory.stock.alert.report.form</field>
            <field name="model">inventory.stock.alert</field>
            <field name="arch" type="xml">
                <form string="Inventory Stock Alert Report">
                    <header>
                        <button name="generate_report_preview" string="Preview Report" type="object" class="btn-primary"/>
                        <button name="generate_report" string="Download XLS Report" type="object" class="btn-primary"/>
                        <button name="generate_pdf_report" string="Download PDF Report" type="object" class="btn-primary"/>
                        <button name="%(inventory_reports_adv_axis.action_inventory_stock_alert1)d" type="action"  string="Graph Report" class="btn-primary"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="threshold"/>
                            </group>
                        </group>
                        <field name="body_html" force_save="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_inv_stock_alert" model="ir.actions.act_window">
            <field name="name">Inventory Stock Alert Report</field>
            <field name="res_model">inventory.stock.alert</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem action="action_inv_stock_alert" id="menu_inv_stock_alert" name="Inventory Stock Alert Report" parent="stock.menu_warehouse_report" sequence="410"/>

    </data>
</odoo>
