<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lifo_valuation_pdf_report" model="ir.actions.report">
        <field name="name">LIFO Valuation</field>
        <field name="model">lifo.valuation</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">inventory_reports_adv_axis.report_lifo_valuation_id</field>
        <field name="report_file">inventory_reports_adv_axis.report_lifo_valuation_id</field>
        <field name="binding_type">report</field>
    </record>

    <template id="report_lifo_valuation_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="inventory_reports_adv_axis.report_lifo_valuation_data"/>
            </t>
        </t>
    </template>
    <template id="report_lifo_valuation_data">
        <t t-call="web.external_layout">
            <t t-call="web.html_container"/>

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Type</th>
                        <th>Cost Price</th>
                        <th>Received Qty</th>
                        <th>Sales Qty</th>
                        <th>Internal Movements Qty</th>
                        <th>Adjustment Qty</th>
                        <th>Available Qty</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="doc.env['product.product'].search([])" t-as="product">
                        <tr>
                            <td><t t-out="product.name"/></td>
                            <td><t t-out="product.type"/></td>
                            <td><t t-out="product.standard_price"/></td>
                            <td><t t-out="doc._get_received_quantity(product)"/></td>
                            <td><t t-out="doc._get_sales_quantity(product)"/></td>
                            <td><t t-out="doc._get_internal_moves_quantity(product)"/></td>
                            <td><t t-out="doc._get_adjustment_quantity(product)"/></td>
                            <td><t t-out="doc._get_available_quantity(product)"/></td>
                            <td><t t-out="product.standard_price * doc._get_available_quantity(product)"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
</odoo>
