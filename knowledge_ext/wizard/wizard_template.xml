<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_template_view" model="ir.ui.view">
            <field name="name">wizard.template</field>
            <field name="model">wizard.template</field>
            <field name="arch" type="xml">
                <form>
                    <field name="is_private" invisible="1"/>
                    <field name="article_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="template_id" />
                        </group>
                    </group>
                    <footer>
                        <button string="Apply" class="btn btn-primary" type="object" name="create_article"  />
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>