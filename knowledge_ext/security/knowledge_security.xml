<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_knowledge" model="ir.module.category">
        <field name="name">Knowledge</field>
        <field name="sequence">2</field>
        <field name="description">Helps you manage your knowledge module</field>
    </record>

    <!-- *********************************** -->
    <!-- ********* GROUPS ****************** -->
    <!-- *********************************** -->

    <record id="group_knowledge_user" model="res.groups">
        <field name="name">Knowledge-worker</field>
        <field name="comment">This is the user of the knowledge system</field>
        <field name="category_id" ref="knowledge_ext.module_category_knowledge"/>
    </record>
    
    <record id="group_knowledge_expert" model="res.groups">
        <field name="name">Expert</field>
        <field name="category_id" ref="knowledge_ext.module_category_knowledge"/>
        <field name="comment">The user will be able to work with idea</field>
        <field name="implied_ids" eval="[(4, ref('group_knowledge_user'))]"/>
    </record>

    <record id="group_knowledge_ambassador" model="res.groups">
        <field name="name">Ambassador</field>
        <field name="category_id" ref="knowledge_ext.module_category_knowledge"/>
        <field name="comment">The user will be able to work with idea</field>
        <field name="implied_ids" eval="[(4, ref('group_knowledge_user'))]"/>
    </record>

    <record id="group_knowledge_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="knowledge_ext.module_category_knowledge"/>
        <field name="comment">The user will be able to work with idea</field>
        <field name="implied_ids" eval="[(4, ref('group_knowledge_user'))]"/>
    </record>

    <record id="group_knowledge_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="knowledge_ext.module_category_knowledge"/>
        <field name="comment">The user will be able to work with idea</field>
        <field name="implied_ids" eval="[(4, ref('group_knowledge_supervisor'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <!-- *********************************** -->
    <!-- ********* RULES ******************* -->
    <!-- *********************************** -->
 
    <data noupdate="0">
    <!-- RULES (user) -->
        <!-- request -->
        <record id="knowledge_request_user_read_rule" model="ir.rule">
            <field name="name">Users can only access their own wizard</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
        </record> 

        <!-- request -->
        <record id="knowledge_request_user_write_rule" model="ir.rule">
            <field name="name">Users can only access their own wizard</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_user'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">user.get_request_access_record()</field>
        </record>

    <!-- RULES (Ambassador) -->
        <!-- request -->
        <record id="knowledge_request_ambassador_read_rule" model="ir.rule">
            <field name="name">Ambassador limited access</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_ambassador'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">['|',('create_uid','=',user.id),('ambassador_ids', 'in', [user.id])]</field>
        </record>

        <!-- request -->
        <record id="knowledge_request_ambassador_write_rule" model="ir.rule">
            <field name="name">Ambassador limited access</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_ambassador'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">user.get_request_access_record()</field>
        </record> 

    <!-- RULES (Expert) -->
     <!-- request -->
        <record id="knowledge_request_expert_read_rule" model="ir.rule">
            <field name="name">Expert limited access</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_expert'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">['|',('create_uid','=',user.id),('expert_ids', 'in', [user.id])]</field>
        </record> 

        <!-- request -->
        <record id="knowledge_request_expert_write_rule" model="ir.rule">
            <field name="name">Expert limited access</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_expert'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">user.get_request_access_record()</field>
        </record> 

        <!-- request score -->
        <record id="knowledge_request_score_expert_rule" model="ir.rule">
            <field name="name">Request score expert limited access</field>
            <field name="model_id" ref="model_knowledge_request_score"/>
            <field name="groups" eval="[(4, ref('group_knowledge_expert'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('expert_id', 'in', [user.id])]</field>
        </record>

    <!-- RULES (supervisor) -->	
        <!-- request -->
        <record id="knowledge_request_supervisor_read_rule" model="ir.rule">
            <field name="name">Supervisor limited access to read request</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_supervisor'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- request -->
        <record id="knowledge_request_supervisor_write_rule" model="ir.rule">
            <field name="name">Supervisor limited access to write request</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_supervisor'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">user.get_request_access_record()</field>
        </record>

        <!-- request score-->
        <record id="knowledge_request_score_supervisor_rule" model="ir.rule">
            <field name="name">Request score supervisor limited access</field>
            <field name="model_id" ref="model_knowledge_request_score"/>
            <field name="groups" eval="[(4, ref('group_knowledge_supervisor'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    <!-- RULES (manager) -->
        <!-- request -->
        <record id="knowledge_request_manager_rule" model="ir.rule">
            <field name="name">Admin limited access</field>
            <field name="model_id" ref="model_knowledge_request"/>
            <field name="groups" eval="[(4, ref('group_knowledge_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">user.get_request_access_record()</field>
        </record>

    </data>
</odoo>
