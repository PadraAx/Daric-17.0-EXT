<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_knowledge_template_form" model="ir.ui.view">
            <field name="name">knowledge.template.form</field>
            <field name="model">knowledge.template</field>
            <field name="arch" type="xml">
                <form string="Template Form" disable_autofocus="1">
                    <field name="cover_image_id" invisible="1"/>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1 ><field name="name" class="border-bottom border-solid"/></h1>
                        </div>
                        <notebook>
                            <page name="content" string="Content">
                                <field name="body" widget="html" no_label="1" options="{'resizable': False, 'knowledge_commands': true}" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_knowledge_template_tree" model="ir.ui.view">
            <field name="name">knowledge.template.tree</field>
            <field name="model">knowledge.template</field>
            <field name="arch" type="xml">
                <tree string="Knowledge template Tree" sample="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_knowledge_template_filter" model="ir.ui.view">
            <field name="name">knowledge.template.search</field>
            <field name="model">knowledge.template</field>
            <field name="arch" type="xml">
                <search string="Knowledge template Search">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="knowledge_template_action" model="ir.actions.act_window">
            <field name="name">Knowledge Template</field>
            <field name="res_model">knowledge.template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
