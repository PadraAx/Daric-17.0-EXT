<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_knowledge_ambassador_item_form" model="ir.ui.view">
            <field name="name">knowledge.ambassador.item.form</field>
            <field name="model">knowledge.ambassador.item</field>
            <field name="arch" type="xml">
                <form string="Ambassador Item Form">
                    <sheet>
                        <div class="oe_title">
                                <h2>
                                    <label for="name" class="oe_edit_only"/>
                                    <field name="name" placeholder="Item Name"/>
                                </h2>
                        </div>
                        <notebook>
                            <page string="Description">
                                <field name="description" widget="text"/>
                            </page>
                        </notebook>  
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_knowledge_ambassador_item_tree" model="ir.ui.view">
            <field name="name">knowledge.ambassador.item.tree</field>
            <field name="model">knowledge.ambassador.item</field>
            <field name="arch" type="xml">
                <tree string="Ambassador Item Tree"> 
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_knowledge_ambassador_item_filter" model="ir.ui.view">
            <field name="name">knowledge.ambassador.item.search</field>
            <field name="model">knowledge.ambassador.item</field>
            <field name="arch" type="xml">
                <search string="Ambassador Item Search">
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record id="knowledge_ambassador_item_action" model="ir.actions.act_window">
            <field name="name">Ambassador Item</field>
            <field name="res_model">knowledge.ambassador.item</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
