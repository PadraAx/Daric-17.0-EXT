<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="mail.ActivityMenu" t-inherit-mode="extension" owl="1">
        <xpath expr="//*[@name='activityGroupLoop']" position="after">
            <div t-if="this.kmsQuickCreate" class="d-grid kms-quick-create-activities" t-on-click="() => this.onClickNewArticles()">
                <a role="button" class="btn text-center">Create new article</a>
            </div>
        </xpath>
    </t>

</templates>
