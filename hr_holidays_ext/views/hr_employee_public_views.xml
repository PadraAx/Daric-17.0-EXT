<odoo>
  <data>
  <!-- Employee View -->
    <record id="hr_holiday_ext_employee_public_form_view_inherit" model="ir.ui.view">
      <field name="name">hr.holiday.ext.employee.public.leave.form.inherit</field>
      <field name="model">hr.employee.public</field>
      <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='leave_manager_id']" position="replace">
          <field name="leave_manager_id" widget="many2one_avatar_user" groups="hr.group_hr_user"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>