<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="edit_holiday_status_ext_form" model="ir.ui.view">
        <field name="name">hr.leave.type.ext.form</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='time_type']" position="after">
                <field name="leave_type" required="1"/>
                <field name="absence_type"/>
            </xpath>
            <xpath expr="//group[@name='leave_validation']//field[@name='leave_validation_type']" position="after">
                <field name="sequence"/>
            </xpath>
            <xpath expr="//group[@name='configuration']//field[@name='request_unit']" position="after">
                <field name="hours_per_day" />
                <field name="day_per_month" />
                <field name="by_pass_leave" />
                <field name="calc_weekends" />
                <field name="dynamic_duration" />
            </xpath>
            <xpath expr="//group[@name='configuration']//field[@name='time_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
