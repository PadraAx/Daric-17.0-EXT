<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <!-- Holiday on resource leave -->
    <record id="resource_calendar_form_inherit_holidays_ext" model="ir.ui.view">
        <field name="name">resource.calendar.from.inherit.holidays.ext</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header//button[@name='switch_calendar_type']" position="after">
                <button name="calculate_allocations" string="Calculate Allocations" type="object"/>
            </xpath>
            <xpath expr="//group[last()]" position="after">
                <group string="Time Limitation">
                    <group>
                        <field name="min_start" widget="float_time"/>
                    </group>
                    <group>
                        <field name="max_start" widget="float_time"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
   
</odoo>
