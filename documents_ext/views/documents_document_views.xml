        </field>
    </record> -->


    <record id="document_view_form_ext" model="ir.ui.view">
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.document_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form create="false">
                    <header>
                        <field name="is_manager" invisible="1"/>
                        <button type="object" name="access_content" string="Access" class="oe_highlight" invisible="not url"/>
                        <button type="object" name="access_content" string="Download" class="oe_highlight" invisible="type != 'binary'"/>
                        <button type="object" name="create_share" string="Share"/>
                        <button type="object" name="toggle_lock" string="Lock" invisible="lock_uid"/>
                        <button type="object" name="toggle_lock" string="Unlock" invisible="not lock_uid"/>
                        <button type="object" name="action_archive" string="Archive" invisible="not active"/>
                        <button type="object" name="action_unarchive" string="Restore" invisible="active"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="open_resource" type="object" class="oe_stat_button" icon="fa-external-link" invisible="not res_id or res_model in [False, 'documents.document']">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Related <br/> Record</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <field name="is_locked" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="res_id" invisible="1"/>
                        <field name="res_model" invisible="1"/>
                        
                        <group string="Published File">
                            <field name="thumbnail" nolabel="1" widget="image" class="oe_avatar" options="{'size': [150, 150]}" invisible="not thumbnail"/>
                            <div class="oe_title" aria-label="Name">
                                <h1>
                                    <field name="name" class="oe_inline" placeholder="Document Name" required="True" readonly="is_locked"/> <i class="fa fa-lock oe_inline" title="Locked" invisible="not lock_uid"/>
                                </h1>
                            </div>

                            <group>
                                <group>
                                    <field name="datas" string="File" filename="name" invisible="type == 'url'" readonly="is_locked"/>
                                </group>
                                <group>
                                    <field name="type"/>
                                </group>
                            </group>
                            <group groups="base.group_no_one">
                                <field name="file_size" invisible="type != 'binary'"/>
                                <field name="mimetype"/>
                            </group>
                        </group>
                        <group string="Orginal File">
                            <field name="orginal_thumbnail" nolabel="1" widget="image" class="oe_avatar" options="{&quot;orginal_preview_image&quot;:&quot;orginal_thumbnail&quot;}" invisible="not orginal_thumbnail"/>
                            <div class="oe_title" aria-label="Orginal Name">
                                <h1>
                                    <field name="orginal_name" class="oe_inline" placeholder="Orginal Document Name" readonly="is_locked"/> <i class="fa fa-lock oe_inline" title="Locked" invisible="not lock_uid"/>
                                </h1>
                            </div>
                            <field name="orginal_res_id" invisible="1"/>
                            <field name="orginal_res_model" invisible="1"/>
                            <group>
                                <group>
                                    <field name="orginal_datas" string="Orginal File" filename="orginal_name" invisible="orginal_type == 'url'" readonly="is_locked"/>
                                </group>
                                <group>
                                    <field name="orginal_type"/>
                                </group>
                            </group>
                            <group groups="base.group_no_one">
                                <field name="orginal_file_size" invisible="orginal_type != 'binary'"/>
                                <field name="orginal_mimetype"/>
                            </group>
                        </group>
                        <group string="Details">
                            <group>
                                <group>
                                    
                                    <field name="url" invisible="type != 'url'" readonly="is_locked"/>
                                    <field name="folder_id" readonly="is_locked"/>
                                    <field name="owner_id" readonly="is_locked"/>
                                    <field name="partner_id"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                    <field name="lock_uid" readonly="1" invisible="not lock_uid"/>
                                </group>
                            </group>
                            <group groups="base.group_no_one">
                                <field name="group_ids" widget="many2many_tags"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                       </group>
                     
                       <notebook>
                            <page string="Published File History" name="Published">
                                <group>
                                    <field name="previous_attachment_ids" nolabel="1" colspan="2" readonly="1">
                                        <tree string="Published File History" create="0"  delete='1'>
                                                <field name="name"/>
                                                <field name="file_size"/>
                                                <field name="create_uid"/>
                                                <field name="create_date"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Orginal File History" name="Orginal">
                                <group>
                                    <field name="orginal_previous_attachment_ids" nolabel="1" colspan="2" readonly="1">
                                        <tree string="Orginal File History" create="0"  delete='1'>
                                                <field name="name"/>
                                                <field name="file_size"/>
                                                <field name="create_uid"/>
                                                <field name="create_date"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                      </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" invisible="not(is_manager == True)"/>
                        <field name="activity_ids" invisible="not(is_manager == True)"/>
                        <field name="message_ids" invisible="not(is_manager == True)"/>
                      </div>
                </form>
            </xpath>
        </field>
    </record>
</odoo>
