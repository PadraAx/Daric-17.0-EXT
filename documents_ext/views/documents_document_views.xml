<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="documents.document_action" model="ir.actions.act_window">
        <field name="domain">[('res_model','=', 'documents.document')]</field>
        <field name="context">{'search_default_filter_workspace_tag': 1}</field>
    </record>
    <record id="document_view_search_ext" model="ir.ui.view">
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.document_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_file_extension']" position='after'>
                <filter string="By Tags" name="filter_workspace_tag" domain="[]" context="{'group_by': 'tag_ids'}"/>
                <filter string="By Workspace" name="filter_workspace_tag" domain="[]" context="{'group_by': 'folder_id'}"/>
            </xpath>
        </field>
    </record>

