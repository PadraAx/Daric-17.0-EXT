<!-- geo_address/static/src/xml/copy_address_template.xml -->
<odoo>
    <template id="assets_backend" inherit_id="web.assets_backend" name="geo_address_assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/geo_address/static/src/js/copy_address_widget.js"/>
            <style>
                .o_field_copy_address .o_copy_icon:hover {
                    color: #0d6efd !important;
                }
            </style>
        </xpath>
    </template>

    <templates id="geo_address_copy_templates" xml:space="preserve">
        <t t-name="geo_address.CopyAddressInit" t-inherit="web.layout" t-inherit-mode="extension">
            <xpath expr="//div[@class='o_web_client']" position="inside">
                <t t-component="copy_address_handler"/>
            </xpath>
        </t>
    </templates>
</odoo>