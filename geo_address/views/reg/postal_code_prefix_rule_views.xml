<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.postal.rules</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="geo_address" string="GEO Address" name="geo_address" groups="geo_address.group_geo_address_user">
                    <block title="Postal Code Validation Rules" name="geo_address_standard_based_setting_container">
                        <!--<div class="alert alert-info">
                            <p>Enter Postal Code Prefix and Suffix Digits and structure:</p>
                        </div>-->
                        <setting title="Postal Code Validation Rules" class="postal_code_settings_section">
                            <field name="postal_code_rules_ids" widget="postal_code_rules_widget">
                                <tree editable="bottom" class="postal_code_rules_tree">
                                    <field name="country_id" required="1"/>
                                    <field name="prefix_digits" required="1"/>
                                    <field name="prefix_allow_letters"/>
                                    <field name="suffix_digits" required="1"/>
                                    <field name="suffix_allow_letters"/>
                                </tree>
                            </field>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>


    <record id="action_postal_code_rules" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'geo_address', 'bin_size': False}</field>
    </record>

    <!-- Company Form Inherit -->
    <record id="view_company_form_inherit_postal_rules" model="ir.ui.view">
        <field name="name">res.company.form.inherit.postal.rules</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Postal Code Rules">
                    <field name="postal_code_rules_ids">
                        <tree editable="bottom">
                            <field name="country_id" required="1"/>
                            <field name="prefix_digits" required="1"/>
                            <field name="prefix_allow_letters"/>
                            <field name="suffix_digits" required="1"/>
                            <field name="suffix_allow_letters"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>