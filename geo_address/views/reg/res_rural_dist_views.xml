<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_rural_dist_tree" model="ir.ui.view">
            <field name="name">res.rural.dist.tree</field>
            <field name="model">res.rural.dist</field>
            <field name="arch" type="xml">
                <tree string="Rural Districts">
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="county_id"/>
                    <field name="name"/>
                    <field name="hierarchical_id"/>
                    <field name="partner_count"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_rural_dist_form" model="ir.ui.view">
            <field name="name">res.rural.dist.form</field>
            <field name="model">res.rural.dist</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Identification">
                                <field name="hierarchical_id" required="1"/>
                            </group>
                            <group string="Location">
                                <field name="country_id" required="1"/>
                                <field name="state_id" required="1"/>
                                <field name="county_id" required="1"/>
                                <field name="partner_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Rural District Divisions">
                                <label for="rural_dist_div_ids"/>
                                <field name="rural_dist_div_ids">
                                    <tree editable="bottom">
                                        <field name="rural_dist_id"/>
                                        <field name="name"/>
                                        <field name="hierarchical_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_rural_dist_search" model="ir.ui.view">
            <field name="name">res.rural.dist.search</field>
            <field name="model">res.rural.dist</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="county_id"/>

                    <filter string="By Country" name="group_by_country" context="{'group_by':'country_id'}"/>
                    <filter string="By State" name="group_by_state" context="{'group_by':'state_id'}"/>
                    <filter string="By County" name="group_by_county" context="{'group_by':'county_id'}"/>
                </search>
            </field>
        </record>

        <!-- Rural District Action -->
        <record id="geo_address.action_rural_dist_tree" model="ir.actions.act_window">
            <field name="name">Rural Districts</field>
            <field name="res_model">res.rural.dist</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_rural_dist_tree"/>
            <field name="search_view_id" ref="view_rural_dist_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Rural Districts Found
                </p>
                <p>
                    Manage rural districts within counties
                </p>
            </field>
        </record>

    </data>
</odoo>