<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View (General Fallback) -->
    <record id="view_res_address_tree" model="ir.ui.view">
        <field name="name">res.address.tree</field>
        <field name="model">res.address</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Addresses">
                <field name="address_type"/>
                <field name="hierarchical_id"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="county_id"/>
                <field name="postal_code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Tree View: City Addresses -->
    <record id="view_res_address_tree_city" model="ir.ui.view">
        <field name="name">res.address.tree.city</field>
        <field name="model">res.address</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="City Addresses">
                <field name="hierarchical_id"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="county_id"/>
                <field name="city_id"/>
                <field name="city_div_id"/>
                <field name="postal_code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Tree View: Rural Addresses -->
    <record id="view_res_address_tree_rural" model="ir.ui.view">
        <field name="name">res.address.tree.rural</field>
        <field name="model">res.address</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Rural Addresses">
                <field name="hierarchical_id"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="county_id"/>
                <field name="rural_dist_id"/>
                <field name="rural_dist_div_id"/>
                <field name="postal_code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_res_address_form" model="ir.ui.view">
        <field name="name">res.address.form</field>
        <field name="model">res.address</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Address">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="hierarchical_id" readonly="1" class="oe_inline"/>
                        </h1>
                    </div>

                    <!-- Start of main group -->
                    <group>
                        <!-- Address Region Group -->
                        <group string="Address Region">
                            <field name="address_type" required="1"/>
                            <field name="country_id" required="1"/>
                            <field name="state_id" required="1" domain="[('country_id', '=', country_id)]"/>
                            <field name="county_id" required="1" domain="[('state_id', '=', state_id)]"/>
                            <field name="city_id" domain="[('county_id', '=', county_id)]" invisible="address_type != 'city'"/>
                            <field name="city_div_id" domain="[('city_id', '=', city_id)]" invisible="address_type != 'city'"/>
                            <field name="rural_dist_id" domain="[('county_id', '=', county_id)]" invisible="address_type != 'rural_dist'"/>
                            <field name="rural_dist_div_id" domain="[('rural_dist_id', '=', rural_dist_id)]" invisible="address_type != 'rural_dist'"/>
                        </group>


                        <!-- Address Details Group -->
                        <group string="Address Details">
                            <field name="bldg_complex_name"/>
                            <field name="available_bldg_ids" invisible="1"/>
                            <field name="bldg_id" domain="[('id', 'in', available_bldg_ids)]"/>
                            <field name="available_floor_ids" invisible="1"/>
                            <field name="floor_id" domain="[('id', 'in', available_floor_ids)]"/>
                            <field name="available_unit_ids" invisible="1"/>
                            <field name="unit_id" domain="[('id', 'in', available_unit_ids)]"/>
                        </group>

                    </group>
                    <!-- End of main group -->

                    <!-- Postal Info Group -->
                    <group string="Postal Information">
                        <group>
                            <field name="postal_code_prefix_id" required="1" domain="[('country_id','=',country_id),('state_id','=',state_id),('county_id','=',county_id)]"/>
                            <field name="postal_code_suffix" required="1" placeholder="5 digits"/>
                        </group>
                        <group>
                            <field name="postal_code" readonly="1"/>
                            <field name="address_text" widget="copy_address" readonly="1" style="white-space: normal; word-break: break-word; display: inline;"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Technical">
                            <group>
                                <field name="active"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </page>
                        <page string="Partners">
                            <group>
                                <field name="partner_count" readonly="1" />
                            </group>
                            <field name="partner_ids">
                                <tree editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="partner_latitude"/>
                                    <field name="partner_longitude"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Kanban View Declaration -->
    <!-- ========================= -->
    <record id="view_res_address_kanban" model="ir.ui.view">
        <field name="name">res.address.kanban</field>
        <field name="model">res.address</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="state_id">
                <field name="image_1024"/>
                <field name="hierarchical_id"/>
                <field name="address_text"/>
                <field name="partner_count"/>
                <field name="county_id"/>
                <field name="city_id"/>
                <field name="rural_dist_id"/>
                <field name="active"/>
                <field name="address_type"/>

                <templates>
                    <!-- Colorpicker for possible future color field -->
                    <t t-name="kanban-menu" t-if="!selection_mode">
                        <a name="%(geo_address.action_address_image_wizard)d" type="action" class="dropdown-item" context="{'default_address_id': active_id}">
                            Upload Cover Image
                        </a>
                    </t>



                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_address_kanban border rounded overflow-hidden shadow-sm">

                            <!-- Cover Image -->
                            <div class="position-relative" style="height: 120px; overflow: hidden;">
                                <img t-att-src="'/web/image/res.address/' + record.id.raw_value + '/image_1024'" alt="Address Image" class="w-100 h-100 object-fit-cover"/>
                            </div>

                            <!-- Content Section -->
                            <div class="p-2">

                                <!-- Address ID (top title, optional) -->
                                <strong class="text-primary d-block mb-1">
                                    <t t-esc="record.hierarchical_id.raw_value"/>
                                </strong>

                                <!-- Location Hierarchy -->
                                <div class="text-muted small mb-1">
                                    <i class="fa fa-map-marker-alt me-1" title="Location"/>
                                    <t t-if="record.county_id.raw_value">
                                        <field name="county_id"/>
                                    </t>
                                    <t t-if="record.address_type.raw_value == 'city' and record.city_id.raw_value">
                                        <span> /                                            <field name="city_id"/>
                                        </span>
                                    </t>
                                    <t t-if="record.address_type.raw_value == 'rural_dist' and record.rural_dist_id.raw_value">
                                        <span> /                                            <field name="rural_dist_id"/>
                                        </span>
                                    </t>
                                </div>

                                <!-- Address Text -->
                                <div t-if="record.address_text.raw_value" class="text-body small mb-2">
                                    <i class="fa fa-home me-1" title="Home icon"/>
                                    <field name="address_text"/>
                                </div>

                                <!-- Separator -->
                                <hr class="my-2"/>

                                <!-- Partner Count -->
                                <div class="d-flex align-items-center mt-1">
                                    <div class="bg-light border rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 24px; height: 24px;">
                                        <i class="fa fa-users text-primary" style="font-size: 14px;" title="Partners"/>
                                    </div>
                                    <div class="small">
                                        <strong>Partners: </strong>
                                        <t t-esc="record.partner_count.raw_value or 0"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Action to Open Kanban -->
    <!-- ========================= -->
    <record id="action_res_address_kanban" model="ir.actions.act_window">
        <field name="name">Address Overview</field>
        <field name="res_model">res.address</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_res_address_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new addresses for cities and rural districts.
            </p>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_res_address_search" model="ir.ui.view">
        <field name="name">res.address.search</field>
        <field name="model">res.address</field>
        <field name="arch" type="xml">
            <search>
                <field name="hierarchical_id"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="county_id"/>
                <field name="city_id"/>
                <field name="city_div_id"/>
                <field name="rural_dist_id"/>
                <field name="rural_dist_div_id"/>
                <field name="postal_code"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="City Addresses" name="city" domain="[('address_type', '=', 'city')]"/>
                <filter string="Rural Addresses" name="rural_dist" domain="[('address_type', '=', 'rural_dist')]"/>
                <group expand="1" string="Group By">
                    <filter string="Country" name="country" context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="state" context="{'group_by': 'state_id'}"/>
                    <filter string="County" name="county" context="{'group_by': 'county_id'}"/>
                    <filter string="City" name="city" context="{'group_by': 'city_id'}"/>
                    <filter string="Rural District" name="rural_dist" context="{'group_by': 'rural_dist_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Window Action: City -->
    <record id="geo_address.action_city_address" model="ir.actions.act_window">
        <field name="name">City Addresses</field>
        <field name="res_model">res.address</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_address_tree_city"/>
        <field name="domain">[('address_type','=','city')]</field>
        <field name="context">{
            'default_address_type': 'city',
            'search_default_city': 1,
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Add a new city address</p>
            <p>Manage city addresses and divisions</p>
        </field>
    </record>

    <!-- Window Action: Rural -->
    <record id="geo_address.action_rural_dist_address" model="ir.actions.act_window">
        <field name="name">Rural Addresses</field>
        <field name="res_model">res.address</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_address_tree_rural"/>
        <field name="domain">[('address_type','=','rural_dist')]</field>
        <field name="context">{
            'default_address_type': 'rural_dist',
            'search_default_rural_dist': 1,
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Add a new rural address</p>
            <p>Manage rural district addresses</p>
        </field>
    </record>
</odoo>
