        <record id="view_bldg_attr_boolean_scoring_rule_tree" model="ir.ui.view">
            <field name="name">bldg.attr.boolean.scoring.rule.tree</field>
            <field name="model">bldg.attr.boolean.scoring.rule</field>
            <field name="arch" type="xml">
                <tree string="Boolean Scoring Rules" editable="bottom">
                    <field name="attribute_id"/>
