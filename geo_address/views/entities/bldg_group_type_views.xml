<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_bldg_group_type_tree" model="ir.ui.view">
        <field name="name">bldg.group.type.tree</field>
        <field name="model">bldg.group.type</field>
        <field name="arch" type="xml">
            <tree string="Building Group Types" decoration-muted="active==False">
                <field name="sequence" widget="handle"/>
                <field name="code" string="Code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="bldg_group_count" widget="statinfo" string="Building Complexes"/>
                <field name="color" widget="color_picker"/>
                <field name="active" readonly="1"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_bldg_group_type_form" model="ir.ui.view">
        <field name="name">bldg.group.type.form</field>
        <field name="model">bldg.group.type</field>
        <field name="arch" type="xml">
            <form string="Building Group Type">
                <header>
                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                    <button name="action_view_bldg_groups" type="object" class="oe_stat_button" icon="fa-building">
                        <field name="bldg_group_count" widget="statinfo" string="Building Complexes"/>
                    </button>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="code" placeholder="AB12"/>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="bldg_group_count" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Enter detailed description..."/>
                        </page>
                        <page string="Related Buildings">
                            <field name="bldg_group_ids" mode="kanban,tree" context="{'default_bldg_group_type_id': id}">
                                <kanban>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="oe_kanban_content">
                                                    <div class="oe_kanban_details">
                                                        <strong>
                                                            <field name="name"/>
                                                        </strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban view -->
    <record id="view_bldg_group_type_kanban" model="ir.ui.view">
        <field name="name">bldg.group.type.kanban</field>
        <field name="model">bldg.group.type</field>
        <field name="arch" type="xml">
            <kanban default_group_by="active">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_{{record.color.raw_value or '0'}} oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_header">
                                    <strong>
                                        <field name="code"/>
                                    </strong>
                                </div>
                                <div class="oe_kanban_item">
                                    <field name="name"/>
                                </div>
                                <div t-if="record.bldg_group_count.raw_value > 0" class="oe_kanban_footer">
                                    <field name="bldg_group_count" widget="statinfo"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_bldg_group_type_search" model="ir.ui.view">
        <field name="name">bldg.group.type.search</field>
        <field name="model">bldg.group.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bldg_group_type" model="ir.actions.act_window">
        <field name="name">Building Group Types</field>
        <field name="res_model">bldg.group.type</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first building group type</p>
        </field>
    </record>
</odoo>