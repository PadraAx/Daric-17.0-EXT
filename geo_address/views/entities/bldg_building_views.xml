<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_bldg_building" model="ir.actions.act_window">
        <field name="name">Buildings</field>
        <field name="res_model">bldg.building</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>


    <!-- Tree View -->
    <record id="view_bldg_building_tree" model="ir.ui.view">
        <field name="name">bldg.building.tree</field>
        <field name="model">bldg.building</field>
        <field name="arch" type="xml">
            <tree string="Buildings">
                <field name="name"/>
                <field name="physical_type_id"/>
                <field name="context_type"/>
                <field name="location_type"/>
                <field name="hierarchical_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bldg_building_form" model="ir.ui.view">
        <field name="name">bldg.building.form</field>
        <field name="model">bldg.building</field>
        <field name="arch" type="xml">
            <form string="Building">
                <sheet>
                    <div style="margin-top: 10px; min-width: 250px; width: 100%;">
                        <span class="o_form_label">
                            <strong>Hierarchical ID</strong>
                        </span>
                        <field name="hierarchical_id" nolabel="1" readonly="1" style="font-size: 1.25rem; font-weight: 600;"/>
                    </div>
                    <div style="margin-top: 10px; min-width: 250px; width: 100%;">
                        <span class="o_form_label">
                            <strong>Name</strong>
                        </span>
                        <field name="name" nolabel="1" class="o_form_field" style="font-size: 1rem; font-weight: 600;"/>
                    </div>
                    <group>
                        <group string="Details">
                            <field name="physical_type_id"/>
                            <field name="category_id"/>
                            <field name="category_description" readonly="1"/>
                            <field name="location_type"/>
                            <field name="context_type"/>
                            <field name="floor_count" readonly="1"/>
                        </group>
                        <group string="Location">
                            <field name="available_city_ids" invisible="1"/>
                            <field name="available_district_ids" invisible="1"/>
                            <field name="city_id" invisible="location_type != 'urban'"/>
                            <field name="city_div_id" domain="[('city_id', '=', city_id)]" invisible="location_type != 'urban'"/>
                            <field name="rural_dist_id" invisible="location_type != 'rural'"/>
                            <field name="rural_dist_div_id" domain="[('rural_dist_id', '=', rural_dist_id)]" invisible="location_type != 'rural'"/>
                            <field name="bldg_complex_id" invisible="context_type != 'complex'"/>
                            <field name="display_name" string="Path"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="notes"/>
                        </page>
                        <page string="Floors">
                            <field name="floor_ids">
                                <tree>
                                    <field name="hierarchical_id"/>
                                    <field name="building_id"/>
                                    <field name="name"/>
                                    <field name="level_number"/>
                                    <field name="floor_type_id"/>
                                    <field name="unit_count"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Gallery">
                            <group>
                                <field name="image" widget="image"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!-- Search View -->
    <record id="view_bldg_building_search" model="ir.ui.view">
        <field name="name">bldg.building.search</field>
        <field name="model">bldg.building</field>
        <field name="arch" type="xml">
            <search string="Search Buildings">
                <field name="name"/>
                <field name="physical_type_id"/>
                <field name="location_type"/>
                <field name="category_id"/>
                <field name="bldg_complex_id"/>
                <field name="city_id"/>
                <field name="rural_dist_id"/>
            </search>
        </field>
    </record>

</odoo>
