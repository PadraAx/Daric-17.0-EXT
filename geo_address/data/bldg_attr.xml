            <field name="sequence">290</field>
            <field name="profile_level">building</field>
            <field name="attr_type">architectural</field>
            <field name="data_type">selection</field>
        </record>

        <record id="attr_seismic_rating" model="bldg.attr">
            <field name="name">seismic_rating</field>
