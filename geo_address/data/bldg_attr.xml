            <field name="sequence">280</field>
            <field name="profile_level">unit</field>
            <field name="attr_type">architectural</field>
            <field name="data_type">selection</field>
        </record>

        <record id="attr_architectural_style" model="bldg.attr">
            <field name="name">architectural_style</field>
