<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_address_image_wizard_form" model="ir.ui.view">
        <field name="name">res.address.image.wizard.form</field>
        <field name="model">res.address.image.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Image" enctype="multipart/form-data">
                <group>
                    <field name="image"/>
                </group>
                <footer>
                    <button name="action_upload" string="Upload" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="geo_address.action_address_image_wizard" model="ir.actions.act_window">
        <field name="name">Upload Address Image</field>
        <field name="res_model">res.address.image.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_address_id': active_id}</field>
    </record>
</odoo>