<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_erm_risk_tag_form" model="ir.ui.view">
        <field name="model">erm.risk.tag</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                  <group>
                    <field name="name" />
                    <field name="color" widget="color_picker"/>
                    <field name="active" widget="boolean_toggle" />
                  </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="view_erm_risk_tag_tree" model="ir.ui.view">
        <field name="model">erm.risk.tag</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
          <tree default_order="id desc" create="1" editable="top">
            <header>
              
            </header>
                <field name="name" />
                <field name="color" widget="color_picker"/>
                <field name="active" />
                <field name="create_uid" />
                <field name="create_date" />
                <field name="write_uid" optional="hide"/>
                <field name="write_date" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_erm_risk_tag_search" model="ir.ui.view">
        <field name="model">erm.risk.tag</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
          <search>
            <field name="name" />

          </search>
        </field>
      </record>
    <record id="action_erm_risk_tag" model="ir.actions.act_window">
        <field name="name">Tages</field>
        <field name="res_model">erm.risk.tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new tag
            </p>
        </field>
    </record>
    <menuitem name="Tages"
        id="menu_erm_risk_tag"
        parent="menu_configuration"
        action="action_erm_risk_tag"
        sequence="12">
    </menuitem>

</odoo>