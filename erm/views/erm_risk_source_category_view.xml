<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_erm_risk_source_category_form" model="ir.ui.view">
    <field name="model">erm.risk.source.category</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <form>
        <header>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
           
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_erm_risk_source_category_tree" model="ir.ui.view">
    <field name="model">erm.risk.source.category</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <tree default_order="id desc" create="1" editable="top">
        <header>
        </header>
        <field name="name"/>
        <field name="description"/>
       
        <field name="create_uid" />
        <field name="create_date" />
        <field name="write_uid" optional="hide"/>
        <field name="write_date" optional="hide"/>
            </tree>
    </field>
  </record>
  <record id="view_erm_risk_source_category_search" model="ir.ui.view">
    <field name="model">erm.risk.source.category</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <search>
           <field name="name"/>
           
      </search>
    </field>
  </record>
  <record id="action_erm_risk_source_category" model="ir.actions.act_window">
    <field name="name">Risk Source Categories</field>
    <field name="res_model">erm.risk.source.category</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form,search</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Category Type'
      </p>
    </field>
  </record>
  <!-- <menuitem name="Risk Source Categories"
    id="menu_erm_risk_source_category"
    parent="menu_configuration"
    action="action_erm_risk_source_category"
    sequence="8">
  </menuitem> -->

</odoo>