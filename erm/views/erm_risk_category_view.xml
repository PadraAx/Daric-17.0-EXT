<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_erm_risk_category_form" model="ir.ui.view">
    <field name="model">erm.risk.category</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <form>
        <header>
        </header>
        <sheet>
          <group>
          <field name="code" readonly="1"/>
            <field name="name"/>
            <field name="user_id"/>
            
            <field name="risk_tolerance"/>
            <field name="currency_id"/>
            <field name="description"/>
   
            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_erm_risk_category_tree" model="ir.ui.view">
    <field name="model">erm.risk.category</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <tree default_order="id desc" create="1" editable="top">
        <header>
        </header>
        <field name="code" readonly="1"/>
        <field name="name"/>
        <field name="user_id" widget="many2one_avatar_employee"/>
        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
        <field name="risk_tolerance"/>
        <field name="currency_id"/>
      
        <field name="create_uid" optional="hide" widget="many2one_avatar_employee"/>
        <field name="create_date" optional="hide"/>
        <field name="write_uid" optional="hide" widget="many2one_avatar_employee"/>
        <field name="write_date" optional="hide"/>
            </tree>
    </field>
  </record>
  <record id="view_erm_risk_category_search" model="ir.ui.view">
    <field name="model">erm.risk.category</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
         
      </search>
    </field>
  </record>
  <record id="action_erm_risk_category" model="ir.actions.act_window">
    <field name="name">Risk Categories</field>
    <field name="res_model">erm.risk.category</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form,search</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Category'
      </p>
    </field>
  </record>
  <menuitem name="Risk Categories"
    id="menu_erm_risk_category"
    parent="menu_configuration"
    action="action_erm_risk_category"
    sequence="3">
  </menuitem>

</odoo>