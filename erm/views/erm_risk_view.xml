                <!-- <button name="action_cancel" string="Cancel" type="object"
                invisible="state not in['1','2','3'] or status == 'Cancelled' or create_uid != uid"
                data-hotkey="R" /> -->
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">

                        <button type="object" icon="fa-thumbs-o-up" class="oe_stat_button" name="action_view_assessments">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"> <field name="assessment_ids_count" /></span>
                                <span class="o_stat_text">Assessments</span>
                            </div>
                        </button>
                    </div> -->
                    <!-- <h1 class="d-flex">
                        <field name="priority" widget="priority" class="me-3" readonly="state != '1' or has_write_access == False"/>
                    </h1> -->
                    <!-- <div class="oe_title pe-0">

                        <h1 class="d-flex justify-content-between align-items-center">
                            <div class="d-flex w-100">
                                <field name="name" readonly="state != '1' or has_write_access == False" options="{'line_breaks': False}" widget="text" class="o_task_name text-truncate w-md-75 w-100 pe-2" placeholder="Risk Title..."/>
                            </div>
                        </h1>
                    </div> -->
                    <group>
                        <field name="req_code"/>
                        <group>
                            <field name="parent_id" />
                            <field name="category_id" readonly="1" />
                            <field name="affected_area_id" readonly="1" />
                            <field name="trigger_id" readonly="not has_write_access" />
                            <field name="detection_difficulty" readonly="not has_write_access" />
                            <field name="risk_velocity_id" readonly="not has_write_access" />
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" readonly="has_write_access == False" options="{'color_field': 'color'}" />
                            <!-- <field name="category_type_id" readonly="1"/> -->
                            <field name="timeframe" readonly="not has_write_access" /> 
                            <field name="risk_mitigation_cost" readonly="1" />
                            <field name="currency_id" readonly="1" />
                            
                            <field name="confidence_level" readonly="not has_write_access" />  
                        </group>
                    </group>
                    <group string="Financial Impact">
                            <group> 
                                    <field name="direct_cost" readonly="not has_write_access" /> 
                                     <field name="total_impact" readonly="1" />  
                             </group>
                            <group>
                                    <field name="indirect_cost" readonly="not has_write_access" />  
                            </group>   
                    </group>
                     <group string="Current Risk">
                        <group>
                            <field name="current_impact_id" readonly="not has_write_access" />  
                            <field name="current_risk_score" readonly="1" /> 
                        </group>
                         <group>
                               <field name="current_likelihood_id" readonly="not has_write_access" /> 
                        </group>     
                    </group>
                     <group string="Residual Risk">
                        <group>
                                <field name="residual_impact_id" readonly="not has_write_access" /> 
                                <field name="residual_risk_score" readonly="1" /> 
                        </group>
                        <group>
                                <field name="residual_likelihood_id" readonly="not has_write_access" />  
                        </group>   
                    </group>
                    <notebook>
                        <page string="Dependencies" name="page_dependencies">
                            <group>
                                <field name="dependencies_ids" nolabel="1" colspan="2">
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <!-- <div class="oe_chatter" >
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>

    <record id="view_erm_risk_tree" model="ir.ui.view">
        <field name="model">erm.risk</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <header>
                </header>
                <field name="req_code"/>
                <field name="parent_id" invisible="1"/>
                <field name="category_id"  />
                <field name="trigger_id" />
                <field name="detection_difficulty" />
                <field name="risk_velocity_id"  />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                <!-- <field name="category_type_id" /> -->
                <field name="timeframe" /> 
                <field name="risk_mitigation_cost"  />
                <field name="confidence_level" />
                <field name="current_risk_score" /> 
                <field name="residual_risk_score" />  
                <field name="create_uid" />
                <field name="create_date" />
                <field name="write_uid" optional="hide"/>
                <field name="write_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_erm_risk_search" model="ir.ui.view">
        <field name="model">erm.risk</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <search>
                <field name="req_code"/>
                <field name="parent_id" invisible="1"/>
                <field name="category_id"  />
                <field name="trigger_id" />
                <field name="detection_difficulty" />
                <field name="risk_velocity_id"  />
                <field name="tag_ids" />
                <!-- <field name="category_type_id" /> -->
                <field name="timeframe" /> 
                <field name="risk_mitigation_cost"  />
                <field name="confidence_level" />
                <field name="create_uid" />
                <field name="create_date" />
                <field name="write_uid"/>
                <field name="write_date"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_erm_risk_graph">
        <field name="name">erm_risk.graph</field>
        <field name="model">erm.risk</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Risk" type="bar" sample="1">
                <field name="id" type="count" string="Count" />
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="view_erm_risk_pivot">
        <field name="name">erm_risk.pivot</field>
        <field name="model">erm.risk</field>
        <field name="type">pivot</field>
        <field name="arch" type="xml">
            <pivot string="Risk" sample="1">
                <field name="id" type="count" string="Count" />
            </pivot>
        </field>
    </record>

