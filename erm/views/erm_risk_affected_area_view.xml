<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_erm_risk_affected_area_form" model="ir.ui.view">
    <field name="model">erm.risk.affected.area</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <form>
        <header>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="category_id"/>        
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_erm_risk_affected_area_tree" model="ir.ui.view">
    <field name="model">erm.risk.affected.area</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <tree default_order="id desc" create="1" editable="top">
        <header>
        </header>
        <field name="name"/>
        <field name="category_id"/>
        <field name="create_uid" />
        <field name="create_date" />
        <field name="write_uid" optional="hide"/>
        <field name="write_date" optional="hide"/>
            </tree>
    </field>
  </record>
 
  <record id="view_erm_risk_affected_area_search" model="ir.ui.view">
    <field name="model">erm.risk.affected.area</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <search>
       <field name="name"/>
        <field name="category_id"/>
      </search>
    </field>
  </record>
  <record id="action_erm_risk_affected_area" model="ir.actions.act_window">
    <field name="name">Risk Affected Areas</field>
    <field name="res_model">erm.risk.affected.area</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form,search</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Risk Affected Area'
      </p>
    </field>
  </record>
  <menuitem name="Risk Affected Areas"
    id="menu_erm_risk_affected_area"
    parent="menu_configuration"
    action="action_erm_risk_affected_area"
    sequence="9">
  </menuitem>

</odoo>