        <record id="calendar_hc_template" model="resource.calendar">
            <field name="name">HC Template Standard X hours/week</field>
            <field name="tz">Asia/Dubai</field>
        </record>

        <record id="hr_attendance_attendance_rule_hc_template" model="hr.attendance.rule">
            <field name="name">حضور</field>
            <field name="code">ATTENDANCE_TYPE_HC</field>
            <field name="work_entry_type_id" ref="work_entry_attendance_type"/>
            <field name="resource_calendar_id" ref="calendar_hc_template"/>
            <field name="condition_formula">result = attendance.type == 1 and not local_week_day== 4  and not has_mission</field>
            <field name="start_formula">result = max(attendance.s_date , day_start)</field>
            <field name="end_formula">result = min(attendance.e_date, day_end)</field>
            <field name="sequence">1</field>
        </record>

        <record id="hr_attendance_work_friday_type_hc_template" model="hr.attendance.rule">
            <field name="name">جمعه کاری</field>
            <field name="code">WORK_FRIDAY_HC</field>
            <field name="work_entry_type_id" ref="work_entry_work_friday_type"/>
            <field name="resource_calendar_id" ref="calendar_hc_template"/>
            <field name="condition_formula">result = attendance.type == 1 and local_week_day == 4   and not has_mission</field>
            <field name="start_formula">result = max(attendance.s_date , day_start)</field>
            <field name="end_formula">result = min(attendance.e_date, day_end)</field>
            <field name="sequence">8</field>
        </record>

