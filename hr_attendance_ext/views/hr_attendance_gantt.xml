<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Gantt view -->
        <record id="hr_attendance_ext_gantt_view" model="ir.ui.view">
            <field name="name">hr.attendance.ext.gantt</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance_gantt.hr_attendance_gantt_view"/>
            <field name="arch" type="xml">
                <xpath expr="//gantt" position="attributes">
                    <attribute name="default_scale">month</attribute>
                </xpath>
            </field>
        </record>

</odoo>
