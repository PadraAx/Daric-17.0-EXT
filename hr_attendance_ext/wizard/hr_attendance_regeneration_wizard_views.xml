<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_regeneration_wizard" model="ir.ui.view">
        <field name="name">hr_attendance_regeneration_wizard</field>
        <field name="model">hr.attendance.regeneration.wizard</field>
        <field name="arch" type="xml">
            <form string="Regenerate Employee Attendance">
                <group>
                    <group>
                        <field name="employee_ids" widget="many2many_avatar_user"/>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="hr_period_id" options="{'no_open': True, 'no_create': True}"/>
                        <field name="date_to" />
                    </group>
                </group>
                <div>
                    <span class="text-muted">Warning: If you dont select employee, system take all punches.</span>
                </div>
                <footer>
                    <button name="regenerate_attendance_entries"
                            string="Regenerate Attendance Entries"
                            class="btn btn-primary oe_highlight"
                            type="object"/>
                    <button name="cancel_button" string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="hr_attendance_regeneration_wizard_action" model="ir.actions.act_window">
        <field name="name">Attendance Regeneration</field>
        <field name="res_model">hr.attendance.regeneration.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
