<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_solution_type_form" model="ir.ui.view">
    <field name="model">requirement.solution.type</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <form>
        <header>
        </header>
        <sheet>
          <group>
            <field name="solution_type"/>
            <field name="partner_id"/>
            <field name="sequence"/>
    
          </group>

        </sheet>
      </form>
    </field>
  </record>

  <record id="view_solution_type_tree" model="ir.ui.view">
    <field name="model">requirement.solution.type</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <tree default_order="id desc">
        <header>
        </header>
           
        <field name="solution_type"/>
        <field name="partner_id"/>
        <field name="sequence"/>
        <field name="create_uid" />
        <field name="create_date" />
        <field name="write_uid" optional="hide"/>
        <field name="write_date" optional="hide"/>
            </tree>
    </field>
  </record>
  <record id="view_solution_type_search" model="ir.ui.view">
    <field name="model">requirement.solution.type</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <search>
        <field name="solution_type"/>
            <field name="partner_id"/>
            <field name="sequence"/>
      </search>
    </field>
  </record>
  <record id="action_solution_type" model="ir.actions.act_window">
    <field name="name">Solution Types</field>
    <field name="res_model">requirement.solution.type</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form,search</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Solution Type'
      </p>
    </field>
  </record>
  <menuitem name="Solution Types"
    id="menu_solution_type"
    parent="menu_configuration"
    action="action_solution_type"
    sequence="6">
  </menuitem>

</odoo>