<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_business_domains_integration_form" model="ir.ui.view">
    <field name="model">requirement.business.domains.integration</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <field name="parent_id" invisible="1" />
        </header>
        <sheet>
          <group>
            <field name="integration_id" />
            <field name="integration_type"/>
        </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="view_business_domains_integration_tree" model="ir.ui.view">
    <field name="model">requirement.business.domains.integration</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <tree default_order="id desc" >
        <header>      
        </header>
        <field name="integration_id" />
        <field name="integration_type"/>
        <field name="create_uid" />
        <field name="create_date" />
        <field name="write_uid" optional="hide"/>
        <field name="write_date" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="view_business_domains_integration_search" model="ir.ui.view">
    <field name="model">requirement.business.domains.integration</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <search>
        <field name="integration_id" />
            <field name="integration_type"/>
         
      
      </search>
    </field>
  </record>
  <record id="action_business_domains_integration" model="ir.actions.act_window">
    <field name="name">Business Domains Integration</field>
    <field name="res_model">requirement.business.domains.integration</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form,search</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Business Domain Integration'
      </p>
    </field>
  </record>
</odoo>