<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_feature_form" model="ir.ui.view">
    <field name="model">requirement.feature</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <form>
        <header>
        </header>
        <sheet>
         
            <field name="code"/>
            <div class="oe_title ">
              <h1>
                <field name="name" options="{'line_breaks': False}" widget="text"  placeholder="Feature Title..."/> 
              </h1>
              </div>
              <group>
            <field name="businessdomain_category_id"/>
            <field name="business_domain_id"/>
            <field name="feature_cat_id" options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
          </group>
          <notebook>
            <page string="Specifications" name="page_specifications">
              <group>
                <field name="specifications" placeholder="Enter your Specifications"
                options="{'collaborative' : true, 'resizable' : true,'codeview' : true}"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_feature_tree" model="ir.ui.view">
    <field name="model">requirement.feature</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <tree  default_order="id desc">
        <header>
        </header>
        <field name="code"/>
        <field name="businessdomain_category_id"/>
        <field name="business_domain_id"/>
        <field name="feature_cat_id" options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
        <field name="name"/>
        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
        <field name="create_uid" />
        <field name="create_date" />
        <field name="write_uid" optional="hide"/>
        <field name="write_date" optional="hide"/>
        </tree>
    </field>
  </record>
  <record id="view_feature_search" model="ir.ui.view">
    <field name="model">requirement.feature</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
      <search>
        <field name="code"/>
            <field name="businessdomain_category_id"/>
            <field name="business_domain_id"/>
            <field name="feature_cat_id" />
            <field name="name"/>
            <field name="specifications"/>
      </search>
    </field>
  </record>
  <record id="action_feature" model="ir.actions.act_window">
    <field name="name">Features</field>
    <field name="res_model">requirement.feature</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree,form,search</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Feature'
      </p>
    </field>
  </record>
  <menuitem name="Features"
    id="menu_feature"
    parent="menu_configuration"
    action="action_feature"
    sequence="5">
  </menuitem>

</odoo>