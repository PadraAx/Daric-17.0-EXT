<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_large_diagram_form" model="ir.ui.view">
    <field name="name">large.diagram.form</field>
    <field name="model">large.diagram</field>
    <field name="arch" type="xml">
        <form string="Large Diagram">
         <header>
           <button name="generate_diagram" string="Generate Diagram" type="object" class="btn-primary"/>
        </header>
            <sheet>
           

                <group>
                    <field name="name"/>
                    <field name="file_data" invisible="1"/>
                </group>
                <div>
                    <t t-if="record.file_data">
                        <object t-att-data="'data:image/svg+xml;base64,' + record.file_data" 
                                type="image/svg+xml" 
                                style="width: 100%; height: 800px; border: none;">
                            Your browser does not support SVG.
                        </object>
                    </t>
                </div>
            </sheet>
        </form>
    </field>
</record>

<record id="view_large_diagram_kanban" model="ir.ui.view">
    <field name="name">large.diagram.kanban</field>
    <field name="model">large.diagram</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="file_data"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-if="record.file_data">
                        <object t-att-data="'data:image/svg+xml;base64,' + record.file_data" 
                                type="image/svg+xml" 
                                style="width: 200px; height: 200px; border: none;">
                        </object>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

  <record id="action_large_diagram" model="ir.actions.act_window">
    <field name="name">Large Diagram</field>
    <field name="res_model">large.diagram</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">form</field>
    <!-- <field name="context">{'search_default_filter_assigned_to_id': 1}</field> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Add a new 'Large Diagram'
      </p>
    </field>
  </record>
  <menuitem name="Large Diagram"
    id="menu_large_diagram"
    parent="menu_configuration"
    action="action_large_diagram"
    sequence="60">
  </menuitem>

</odoo>