<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_report_generator_wizard" model="ir.ui.view">
            <field name="name">Report Generator Wizard</field>
            <field name="model">report.generator</field>
            <field name="arch" type="xml">
                <form string="Report Generator ">
                     <header>
                        <button name="generate_report" string="Extract" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </header>
                    <group>
                      <field name="report_data"  />
                    </group>
                   
                </form>
            </field>
        </record>

        <record id="action_report_generator_wizard" model="ir.actions.act_window">
            <field name="name">Report Generator</field>
            <field name="res_model">report.generator</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- <menuitem
        action="action_report_generator_wizard"
        id="menu_view_action_report_generator_wizard"
        parent="base.menu_translation_export"
        sequence="50"/> -->

            <menuitem name="Report Generator"
                id="menu_view_action_report_generator_wizard"
                parent="menu_reporting"
                action="action_report_generator_wizard"
                sequence="60">
            </menuitem>
    </data>
</odoo>
