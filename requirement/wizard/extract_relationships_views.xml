<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_extract_relationships_wizard" model="ir.ui.view">
            <field name="name">Extract Relationships Wizard</field>
            <field name="model">extract.relationships.wizard</field>
            <field name="arch" type="xml">
                <form string="Extract Relationships Wizard">
                    <group>
                         <p>Sample: "/odoo17/odoo/addons"</p>
                      <field name="name" />
                    </group>
                    <footer>
                        <button name="extract" string="Extract" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_extract_relationships_wizard" model="ir.actions.act_window">
            <field name="name">System Architecture</field>
            <field name="res_model">extract.relationships.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- <menuitem
        action="action_extract_relationships_wizard"
        id="menu_view_action_extract_relationships_wizard"
        parent="base.menu_translation_export"
        sequence="50"/> -->

            <menuitem name="System Architecture"
                id="menu_view_action_extract_relationships_wizard"
                parent="menu_reporting"
                action="action_extract_relationships_wizard"
                sequence="50">
            </menuitem>
    </data>
</odoo>
