<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="review_create_wizard_form" model="ir.ui.view">
        <field name="model">requirement.review.create.wizard</field>
        <field name="name">requirement.review.create.wizard.form</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form  class="custom-popup">
                <sheet>

                    <group>
                        <field name="critical_level_id"  widget="radio" options="{'horizontal': true}" nolabel="1" colspan="2"/>
                        <field name="tag_ids" widget="many2many_tags" />

                    </group>
                    <notebook>
                        <page string="Review" name="page_review">
                          <group>
                            <field name="comments" placeholder="Enter your comments"
                            options="{'collaborative' : true, 'resizable' : true,'codeview' : true}" />
                
                          </group>
                        </page>
                      </notebook>
                </sheet>
                <footer>
                    <button string="Submit" class="btn btn-primary" type="object" name="action_reviewed" data-hotkey="q" />
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_review_create_wizard" model="ir.actions.act_window">
        <field name="name">Review</field>
        <field name="res_model">requirement.review.create.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Review
            </p>
        </field>
    </record>
</odoo>