<odoo>
    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/> <!-- Ensure this reference is correct -->
        <field name="arch" type="xml">
            <!-- Adjusted XPath to locate the nearest existing field -->
            <xpath expr="//form/sheet/group" position="inside">
                <group>
                    <field name="supply_source_id"/> <!-- Added the supply_source_id field -->
                </group>
            </xpath>
        </field>
    </record>
</odoo>
