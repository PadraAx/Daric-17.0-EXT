<odoo>
    <record id="account_invoice_lock_price_form_view" model="ir.ui.view">
        <field name="name">account.invoice.lock.price.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="readonly_price" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="replace">
                <field name="price_unit" string="Price" attrs="{'readonly': [('readonly_price', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>