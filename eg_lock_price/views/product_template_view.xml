<odoo>
    <record id="product_template_inherit_lock_price_form_view" model="ir.ui.view">
        <field name="name">product.template.inherit.lock.price.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <field name="readonly_price" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="readonly">readonly_price == True</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="readonly">readonly_price == True</attribute>
            </xpath>
        </field>
    </record>
</odoo>