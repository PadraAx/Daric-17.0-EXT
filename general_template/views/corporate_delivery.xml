<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="delivery_exclusive_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.delivery_exclusive_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>
    <template id="delivery_exclusive_header">
        <div class="header container-fluid" style="width:100%;height:10%" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <div class="row">
                <div class="col-8">
                    <t t-if="o.company_id.invoice_logo or o.company_id.logo">
                        <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 80px;" t-if="o.company_id.logo"/>
                    </t>
                </div>
                <div class="col-4">
                    <t t-if="o.company_id.street">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.street"/><br/>
                    </t>
                    <t t-if="o.company_id.phone">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.phone"/><br/>
                    </t>
                    <t t-if="o.company_id.email">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.email"/><br/>
                    </t>
                    <t t-if="o.company_id.website">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.website"/>
                    </t>
                </div>
            </div>
            <div>
                <p t-attf-style="border-bottom:1px solid #{theme_color};width:100%;padding:10px;"/>
            </div>
        </div>
    </template>
    <template id="report_delivery_exclusive_main">
        <t t-call="general_template.delivery_exclusive_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.templates_watermark"/>
                <div  width="100%">
                    <div>
                        <p t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};font-weight:bold;width:100%;font-size:30px;">
                            Delivery Note #
                            <span t-field="o.name"/>

                        </p>

                    </div>
                    <div>
                        <p t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};width:100%;border-radius: 20px;padding: 10px;">
                            <t t-if="o.name">
                              
                                    <span>Delivery No # :</span>
                                    <span t-field="o.name"/><br/>
                               
                            </t>
                            <t t-if="o.origin">
                                
                                    <span>Order (Origin):</span>
                                    <span t-field="o.origin"/><br/>
                                
                            </t>
                             <t t-if="o.scheduled_date">
                               
                                    <span>Scheduled Date:</span>
                                    <span t-field="o.scheduled_date"/><br/>
                                                        
                            </t>
                            <t t-if="o.user_id">
                               
                                    <span>Responsible:</span>
                                    <span t-field="o.user_id"/><br/>
                                                      
                            </t>
<!--                            <t t-if="o.weight">-->
<!--                                -->
<!--                                    <span>Weight:</span>-->
<!--                                    <span t-field="o.weight"/><br/>-->
<!--                                                        -->
<!--                            </t>-->
                        </p>
                    </div>
                    <div t-attf-style="color: #{o.company_id and o.company_id.text_color or '#000000'};">
                        <div class="row">
                            <div class="col-4" style="border-radius: 10px;border: 2px solid #666;padding: 10px;margin:0.3%;height:auto;" name="div_outgoing_address">
                                <div t-if="o.should_print_delivery_address()">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Delivery Address:</span>
                                    <div t-field="o.move_ids[0].partner_id"
                                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                                <div t-elif="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Warehouse Address:</span>
                                    <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                            </div>
                            <div class="col-4" style="border-radius: 10px;border: 2px solid #666;padding: 10px;margin:0.3%;height: auto;" name="div_incoming_address">
                                
                                <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Vendor Address:</span>
                                </div>
                                <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Warehouse Address:</span>
                                </div>
                                <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Customer Address:</span>
                                </div>
                                <div t-if="o.partner_id" name="partner_header">
                                    <div t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                            </div>
                            <div class="col-4" style="border-radius: 10px;border: 2px solid #666;padding: 10px;margin:0.3%;height:auto;"><strong t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};">Pay to:</strong><br/>
                                <t t-call="general_template.templates_company_details"/>
                            </div>
                        </div>
                    </div>
                    <div>
                        <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:0px 0px 10px 0px; width:100%;"/>
                    </div>
                    <div align="left"  style=" font-weight:bold; width:100%;" valign="top">
                        <t t-call="general_template.delivery_note_templates_order_line"/>
                    </div>
                    <div>
                        <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                    </div>
                </div>
                <div align="center">
                    <span t-field="o.name" t-options="{'widget':'barcode','width':190,'height':35}"/>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    <template id="report_delivery_custom_exclusive">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-call="general_template.report_delivery_exclusive_main" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
