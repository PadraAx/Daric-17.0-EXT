<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_exclusive_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.sale_exclusive_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-id="o and o.id" t-att-data-oe-model="o and o._name" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.template_footer"/>
    </template>
    <template id="sale_exclusive_header">
        <div class="header container" style="width:100%;height:10%" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <div class="row">
                <div class="col-9">
                    <t t-if="o.company_id.invoice_logo or o.company_id.logo">
                        <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 80px;" t-if="o.company_id.logo"/>
                    </t>
                </div>
                <div class="col-3">
                    <t t-if="o.company_id.street">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.street"/><br/>
                    </t>
                    <t t-if="o.company_id.phone">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.phone"/><br/>
                    </t>
                    <t t-if="o.company_id.email">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.email"/><br/>
                    </t>
                    <t t-if="o.company_id.website">
                        <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.website"/>
                    </t>
                </div>
            </div>
            <div>
                <p t-attf-style="border-bottom:1px solid #{theme_color};width:100%;padding:10px;"/>
            </div>
        </div>
    </template>
    <template id="report_sale_exclusive_main">
        <t t-call="general_template.sale_exclusive_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.template_watermark"/>
                <div width="100%">
                    <div>
                        <p class="table table-borderless" t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};font-weight:bold;width:100%;font-size:35px;">
                           <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                               <span t-if="o.state not in ['draft','sent']">Order # </span>
                               <span t-if="o.state in ['draft','sent']">Quotation # </span>
                           </t>
                           <t t-if="env.context.get('proforma', False) or is_pro_forma">
                               <span>Pro-Forma Invoice # </span>
                           </t>
                           <span t-field="o.name"/>
                        </p>
                    </div>
                    <div>
                        <p t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};width:100%;border-radius: 20px;padding: 10px;">
                            <t t-if="o.date_order">
                                <span t-if="o.state not in ['draft','sent']">Date Ordered:</span>
                                <span t-if="o.state in ['draft','sent']">Quotation Date:</span>
                                <span t-field="o.date_order"/><br/>
                            </t> 
                            <t t-if="o.client_order_ref">
                                <span>Your Reference:</span>
                                <span t-field="o.client_order_ref"/><br/>
                            </t>
                            <t t-if="o.user_id">
                                <span>Salesperson:</span>
                                <span t-field="o.user_id"/><br/>
                            </t>
                            <t t-if="o.payment_term_id and o.payment_term_id.name or ''">
                                <span class="text-left">Payment Term:</span>
                                <span t-esc="o.payment_term_id and o.payment_term_id.name or '' "/><br/>
                            </t>
                            <t t-if="o.validity_date">
                                <span>Expiration Date:</span>
                                <span t-field="o.validity_date"/><br/>
                            </t>
                        </p>
                    </div>
                    <div t-attf-style="color: #{o.company_id and o.company_id.text_color or '#000000'};">
                        <t t-if="o.partner_shipping_id == o.partner_invoice_id" >
                            <t t-set="temp_var" t-value="'col-4'"/>
                        </t>
                        <t t-else="o.partner_shipping_id =!= o.partner_invoice_id">
                            <t t-set="temp_var" t-value="'col-3'"/>
                        </t>
                        <div class="row">
                            <div t-att-class="temp_var" style="border-radius: 10px;border: 2px solid #666;padding: 5px;height: auto;">
                                <t t-call="general_template.sale_templates_customer_details"/>
                            </div>
                            <div t-att-class="temp_var" style="border-radius: 10px;border: 2px solid #666;padding: 5px;height: auto;margin-left:0.5%;">
                                <t t-call="general_template.sale_templates_invoice_customer_details"/>
                            </div>
                            <t t-if="o.partner_shipping_id != o.partner_invoice_id">
                            <div class="col-3">
                                <!-- <t t-if="o.partner_shipping_id != o.partner_invoice_id"> -->
                                    <div style="border-radius: 10px;border: 2px solid #666;padding: 5px;height: auto;margin-left:0.5%;">
                                        <t t-call="general_template.sale_templates_invoice_customer_shipping_details"/>
                                    </div>
                              
                            </div>
                              </t>
                            <div t-att-class="temp_var" style="border-radius: 10px;border: 2px solid #666;padding: 10px;height: auto;margin-left:0.5%;"><strong>Pay to:</strong><br/>
                                <t t-call="general_template.templates_company_details"/>
                            </div>
                        </div>
                    </div>
                    <div>
                        <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                    </div>
                    <div align="left" style="padding:10px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                        <t t-call="general_template.sale_order_lines_tem"/>
                        <t t-call="general_template.sale_order_lines_subtotal_tem"/>
                    </div>
                    <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                        <t t-call="general_template.template_total_amount_word"/>
                    </div>
                    <div class="left" style="color: #{text_color or '#000000'}; padding-top:10px; ">
                        <t t-call="general_template.sale_templates_notes"/>
                    </div>
                    <div t-if="o.sale_order_option_ids and o.state in ['draft', 'sent']">
                        <t t-call="general_template.sale_templates_suggested_order_line"/>
                    </div>
                    <div class="container-fluid">
                        <div class="row" style="color: #{text_color or '#000000'};">
                            <div class="col-9">
                        </div> 
                        <div class="col-3">                       
                            <t t-if="o.sale_is_show_signature == True">
                                <t t-call="general_template.report_sale_signature"/>
                            </t>
                            <t t-else="">
                                <t t-call="general_template.report_signature"/>
                            </t>
                        </div>
                    </div>
                </div>
                </div>
                <t t-call="general_template.report_barcode"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    <template id="report_sale_order_custom_exclusive">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-call="general_template.report_sale_exclusive_main" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
