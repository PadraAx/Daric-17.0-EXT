<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="picking_creative_external_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="general_template.picking_creative_header"/>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
            <t t-call="general_template.templates_footer"/>
        </template>
        <template id="picking_creative_header">
            <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <table class="table table-borderless" border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tbody>
                        <tr>
                            <td>
                                <center>
                                    <table class="table table-borderless" border="0" cellpadding="0" cellspacing="0" width="100%">
                                        <tr>
                                            <td align="left" colspan="2" valign="top" style="width:30%;">
                                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr>
                                                        <td align="left" valign="middle">
                                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                                <tr>
                                                                    <td align="left" valign="middle">
                                                                        <t t-if="o.company_id.invoice_logo">
                                                                            <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 60px;" t-if="o.company_id.logo"/>
                                                                        </t>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                        <td align="right" rowspan="3" style="width:70%;" valign="top">
                                                            <p t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};background-color: #{o.company_id and o.company_id.theme_color or '#000000'}; text-align:center; text-transform:uppercase; padding-top:5px; font-size:35px;margin-bottom:0;">
                                                                Picking Operations
                                                            </p>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </center>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </template>
        <template id="report_picking_creative_main">
            <t t-call="general_template.picking_creative_external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                    <div class="oe_structure"/>
                    <t t-call="general_template.templates_watermark"/>
                    <div width="100%">
                        
                        <div class="container-fluid">
                            <div class="row" valign="top" >
                                <div class="col-3" colspan="1" style="margin-top:12px">
                                   <div style="background-color:#C0C0C0; height:20px;border: 2px solid #C0C0C0;border-radius: 10px;padding: 5px;margin-right:20px;">
                                   </div>
                                </div>
                                <div class="col-9" t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                    <table class="table table-borderless">
                                        <tr t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold;background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                            <td t-if="o.name">
                                                <b>Picking No # :</b><br/>
                                                <span t-field="o.name"/>
                                            </td>
                                            <td t-if="o.origin">
                                                <b>Order (Origin):</b><br/>
                                                <span t-field="o.origin"/>
                                            </td>
                                            <td t-if="o.state">
                                                <b>State:</b><br/>
                                                <span t-field="o.state"/>
                                            </td>
                                            <td t-if="o.date">
                                                <b>Commitment Date:</b><br/>
                                                <span t-field="o.date"/>
                                            </td>
                                            <td t-if="o.scheduled_date">
                                                <b>Scheduled Date:</b><br/>
                                                <span t-field="o.scheduled_date"/>
                                            </td>
                                            <td t-if="o.user_id">
                                                <b>Responsible:</b><br/>
                                                <span t-field="o.user_id"/>
                                            </td>
<!--                                            <td t-if="o.weight">-->
<!--                                                <b>Weight:</b><br/>-->
<!--                                                <span t-field="o.weight"/>-->
<!--                                            </td>-->
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div>
                                <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:0px 0px 10px 0px; width:100%;"/>
                            </div>
                            <div class="row">
                                <div class="col-5" name="div_outgoing_address">
                                    <div t-if="o.should_print_delivery_address()">
                                        <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Delivery Address:</span>
                                        <div t-field="o.move_ids[0].partner_id"
                                          t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-elif="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id">
                                        <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Warehouse Address:</span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                          t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-4" name="div_incoming_address">
                                <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Vendor Address:</span>
                                </div>
                                <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Warehouse Address:</span>
                                </div>
                                <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                    <span t-attf-style="color: #{theme_color or '#000000'};font-weight:bold;">Customer Address:</span>
                                </div>
                                <div t-if="o.partner_id" name="partner_header">
                                    <div t-field="o.partner_id"
                                          t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                            </div>
                            <div class="col-3">
                                <span>Pay To:</span><br/>
                                <t t-call="general_template.templates_company_details"/>
                            </div>
                        </div>                        
                        <div>
                            <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:0px 0px 10px 0px; width:100%;"/>
                        </div>
                        <div align="left"  style="font-weight:bold; width:100%;" valign="top">
                            <t t-call="general_template.picking_templates_order_lines"/>
                        </div>
                        <div>
                            <p t-if="o.state in ['draft', 'waiting', 'confirmed'] or no_reserved_product" class="fa fa-exclamation-triangle">
                                    All products could not be reserved. Click on the "Check Availability" button to try to reserve products
                            </p>
                        </div>
                        <div align="right">
                            <t t-call="general_template.report_signature"/>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </div>
                <div align="center">
                    <span t-field="o.name" t-options="{'widget':'barcode','width':190,'height':35}"/>
                </div>
                <div class="oe_structure"/>
                </div>
            </t>
        </template>
        <template id="report_picking_custom_creative">
            <t t-call="web.html_container">
                <t t-as="o" t-foreach="docs">
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <t t-call="general_template.report_picking_creative_main" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
