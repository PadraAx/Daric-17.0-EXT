<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="advanced_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.advanced_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.template_footer"/>
    </template>
    <template id="advanced_header">
        <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-3">
                        <t t-if="o.company_id.invoice_logo">
                            <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 50px;" t-if="o.company_id.logo"/>
                        </t>
                    </div>
                    <div class="col-3">
                        <t t-if="o.company_id.partner_id.email">
                            <span><strong>Email:</strong></span><br/>
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.email"/><br/>
                        </t>
                    </div>
                    <div class="col-3">
                        <t t-if="o.company_id.phone">
                            <span><strong>Phone:</strong></span><br/>
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.phone"/><br/>
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};">Monday to Friday</span>
                        </t>
                    </div>
                    <div class="col-3">
                        <t t-if="o.company_id.partner_id.name">
                            <span><strong>Address:</strong></span><br/>
                            <section t-attf-style="color: #{o.company_id and o.company_id.company_color or '#000000'};" t-field="o.company_id.name"></section>
                            <section t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.street"/>
                            <section t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.city"/>
                            <section t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.country_id"/>
                        </t>
                    </div>
                </div>
            </div>
            <div>
                <p t-attf-style="border-bottom:1px solid #{theme_color}; padding:5px"/>
            </div>
        </div>
    </template>
    <template id="report_invoice_advanced_main">
        <t t-call="general_template.advanced_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.template_watermark"/>
                <div width="100%">
                    <div class="container-fluid" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                        <div class="row">
                            <div align="left" class="col-4">
                            <!-- <div style="width:50%;"> -->
                                <t t-call="general_template.invoice_templates_customer_details"/>
                                <p t-attf-style="border-top:1px solid #{theme_color or '#000000'};width:50%">
                                    <t t-call="general_template.invoice_templates_customer_shipping_details"/>
                                </p>
                            </div>
                            <div align="right" class="col-8">
                            <!-- <div style="width:50%; "> -->
                                <table class="table table-borderless">
                                    <tr t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};font-size:50px;t">
                                        <td>
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                          <table class="table table-borderless">
                                              <tbody>
                                                <tr class="tr-border-radius" t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; };">
                                                    <td t-if="o.move_type == 'out_invoice'" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Invoice Date:</b><br/>
                                                        <span t-esc="o._get_invoice_date()"/>
                                                    </td>
                                                    <td t-if="o.payment_reference" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Invoice No:</b><br/>
                                                        <span t-field="o.payment_reference"/>
                                                    </td>
                                                    <td t-if="o.amount_total"  t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Grand Total:</b><br/>
                                                        <span t-field="o.amount_total"/>
                                                    </td>
                                                    <td t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Due Date:</b><br/>
                                                        <span t-esc="o._get_invoice_due_date()"/>
                                                    </td>
                                                    <td t-if="o.source_id" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Source:</b><br/>
                                                        <span t-esc="o.source_id.name"/>
                                                    </td>
                                                    <td t-if="o.partner_id.ref" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Customer code:</b><br/>
                                                        <span t-esc="o.partner_id.ref"/>
                                                    </td>
                                                    <td t-if="o.invoice_origin" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b t-if="o.move_type in ('out_invoice','out_refund')">SO:</b><br/>
                                                        <b t-if="o.move_type in ('in_invoice', 'in_refund')">PO:</b>
                                                        <span t-field="o.invoice_origin"/>

                                                    </td>
                                                    <td t-if="o._get_origin_date(o.invoice_origin)" t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                                        <b>Order Date:</b><br/>
                                                        <span t-esc="o._get_origin_date(o.invoice_origin)"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                          </table>
                                        </td>                           
                                    </tr>                        
                                </table>
                            </div>
                        </div>
                        <div style="padding:20px 0px 0 0; font-weight:bold; width:100%;" >
                            <t t-call="general_template.report_invoice_order_lines"/>
                            
                        </div>
                        <div>
                            <t t-call="general_template.invoice_subtotal_tem" />
                        </div>
                        <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                            <t t-call="general_template.template_total_amount_word"/>
                        </div>
                        
                        <div t-if="not o._compute_payments_widget_reconciled_info()">
                            <p t-att-style="'font-weight:bold; color:#000; margin-bottom:0; text-transform:capitalize; margin-top:8px; color: %s;' % (text_color)">
                                Payment Status: 
                                <span t-esc="dict(o._fields['payment_state']._description_selection(o.env)).get(o.payment_state)"/>
                            </p>
                        </div>
                        <div class="pull-left" style="color: #{text_color or '#000000'}; padding-top:5px; ">
                            <t t-call="general_template.report_invoice_notes"/>
                        </div>
                        <div align="right"  style="color: #{text_color or '#000000'};">
                            <t t-call="general_template.report_invoice_signature"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <t t-call="general_template.report_invoice_barcode"/>
            </div>
        </t>
    </template>
    <template id="report_invoice_template_custom_advanced">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-call="general_template.report_invoice_advanced_main" t-lang="lang"/>
            </t>
        </t>
    </template>
    <template id="report_invoice_advanced_main_duplicate" inherit_id="general_template.report_invoice_advanced_main" primary="True">
        <!-- <xpath expr="//div[@t-if='not o._compute_payments_widget_reconciled_info()']" position="before">
            <t t-call="general_template.report_invoice_payment_move_line"/>
        </xpath> -->
    </template>
</odoo>
