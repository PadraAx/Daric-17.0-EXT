<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.purchase_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>
    <template id="purchase_template_header">
        <div class="header" style="height:100px;" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <div style="float:left">
                <t t-if="o.company_id.invoice_logo">
                    <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 60px;" t-if="o.company_id.logo"/>
                </t>
            </div>
            <div t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; float:right; width:60%;">
                <table class="table table-borderless" t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};background-color: #{o.company_id and o.company_id.theme_color or '#000000'};font-weight:bold;text-align:center;font-size:30px; position: relative; margin-bottom: 0;">
                        <tr>
                            <td t-attf-style="width: 100%;position: relative;/* z-index: -1; */left: 0">
                                <span t-if="o.state not in ['draft']">Purchase Order Confirmation # </span>
                                <span t-if="o.state in ['draft']">Request for Quotation # </span>
                            </td>
                            <td class="tm_shape_bg " t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};position: absolute;height: 100%;width: 100%; -webkit-transform: skewX(35deg); transform: skewX(35deg); top: 0px;right: -100px; overflow: hidden; left: -50px; z-index: -1;"></td>
                        </tr>
                </table>
            </div>
            <div class="row" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;width:100%; padding-top:10px;margin-left: 0;'">
                <div class="col-5"></div>
                <div class="col-7" style="padding:0">
                    <table class="table table-borderless" style="position: relative;">
                        <tr t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                            <td>
                                <b t-if="o.state not in ['draft']">Date Ordered:</b>
                                <b t-if="o.state in ['draft']">Quotation Date:</b><br/>
                                <span t-field="o.date_order"/>
                            </td>
                            <td t-if="o.partner_ref">
                                <b>Your Order Reference:</b><br/>
                                <span t-field="o.partner_ref"/>
                            </td>
                            <td t-if="o.user_id">
                                <b>Purchase Representative:</b><br/>
                                <span t-field="o.user_id"/>
                            </td>
                        </tr>
                        <tr class="tm_shape_bg " t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};position: absolute;height: 100%;width: 89%;-webkit-transform: skewX(35deg);transform: skewX(35deg);top: 0px;right: -97px;overflow: hidden;left: -31px;z-index: -1;"></tr>
                    </table>
                </div>
            </div>
            
        </div>
    </template>
    <template id="report_purchase_main">
        <t t-call="general_template.purchase_template_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.templates_watermark"/>
                <div>
                    <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'};  width:100%;"/>
                </div>
                <div width="100%">
                    <!-- <div width="100%"> -->
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-5">
                                    <t t-call="general_template.templates_customer_details"/>
                                </div>
                                <div class="col-4">
                                    <t t-call="general_template.templates_warehouse_details"/>
                                </div>
                                <div class="col-3">
                                    <t t-call="general_template.templates_company_details"/>
                                </div>
                            </div>
                        </div> 
                        <div>
                            <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'};  width:100%;"/>
                        </div>
                        <div>
                            <t t-call="general_template.purchase_template_order_lines"/>
                        </div>
                        <div style="overflow:auto;">
                            <t t-call="general_template.purchase_template_order_subtotal"/>
                        </div>
                        <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                            <t t-call="general_template.template_total_amount_word"/>
                        </div>
                        <div t-attf-style="color: #{text_color or '#000000'}; padding-top:5px; width:100%;" t-if="o.notes and o.company_id.is_show_notes == True">
                            <p t-field="o.notes"/>
                        </div>
                        <div align="right" t-attf-style="color: #{text_color or '#000000'};">
                            <t t-call="general_template.report_signature"/>
                        </div>
                        <div class="oe_structure"/>
                    <!-- </div> -->
                </div>
            </div>
            <t t-call="general_template.report_barcode"/>
        </t>
    </template>
    <template id="report_purchase_custom">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" />                
                <t t-call="general_template.report_purchase_main" t-lang="lang"/>
            </t>
        </t>
    </template>
    <template id="purchase.report_purchaseorder">
        <t t-call="web.html_container">
            <t t-set="report_name" t-value="{'report_purchase_custom': 'general_template.report_purchase_main',                                         'report_purchase_custom_creative': 'general_template.report_purchase_creative_main',                                         'report_purchase_custom_elegant': 'general_template.report_purchase_elegant_main',                                         'report_purchase_custom_professional': 'general_template.report_purchase_professional_main',                                         'report_purchase_custom_exclusive': 'general_template.report_purchase_exclusive_main',                                         'report_purchase_custom_advanced': 'general_template.report_purchase_advanced_main',                 'report_purchase_custom_incredible': 'general_template.report_purchase_incredible_main',                 'report_purchase_custom_innovative': 'general_template.report_purchase_innovative_main',}"/>
            <t t-as="o" t-foreach="docs">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-set="r_name" t-value="o.report_template_id and o.report_template_id.report_name or o.partner_id and o.partner_id.report_po_template_id and o.partner_id.report_po_template_id.report_name or o.company_id and o.company_id.report_po_template_id and o.company_id.report_po_template_id.report_name"/>
                <t t-set="real_name" t-value="r_name.split('.')"/>
                <t t-if="o.report_template_id or o.partner_id and o.partner_id.report_po_template_id or o.company_id and o.company_id.report_po_template_id">
                    <!-- <t t-call="#{report_name.get(real_name[1], 'general_template.report_purchase_advanced_main')}" t-lang="o.partner_id.lang"/>-->
                    <t t-call="general_template.report_purchase_main" t-if="r_name == 'general_template.report_purchase_custom'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_creative_main" t-if="r_name == 'general_template.report_purchase_custom_creative'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_elegant_main" t-if="r_name == 'general_template.report_purchase_custom_elegant'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_professional_main" t-if="r_name == 'general_template.report_purchase_custom_professional'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_exclusive_main" t-if="r_name == 'general_template.report_purchase_custom_exclusive'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_advanced_main" t-if="r_name == 'general_template.report_purchase_custom_advanced'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_incredible_main" t-if="r_name == 'general_template.report_purchase_custom_incredible'" t-lang="lang"/>
                    <t t-call="general_template.report_purchase_innovative_main" t-if="r_name == 'general_template.report_purchase_custom_innovative'" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
