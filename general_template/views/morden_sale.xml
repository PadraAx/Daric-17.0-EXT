<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_creative_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.sale_creative_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-id="o and o.id" t-att-data-oe-model="o and o._name" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.template_footer"/>
    </template>
    <template id="sale_creative_header">
        <div class="header container-fluid" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <div style="float:left">
                <t t-if="o.company_id.invoice_logo">
                    <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 50px;" t-if="o.company_id.logo"/>
                </t>
            </div>
            <div t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; float:right; width:65%;">
                <table class="table table-borderless" t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};background-color: #{o.company_id and o.company_id.theme_color or '#000000'};font-weight:bold;text-align:center;font-size:35px; position: relative; margin-bottom: 0;">
                        <tr>
                            <td t-attf-style="width: 100%;position: relative;/* z-index: -1; */left: 0">
                                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                    <span t-if="o.state not in ['draft','sent']">Order # </span>
                                    <span t-if="o.state in ['draft','sent']">Quotation # </span>
                                </t>
                                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                    <span>Pro-Forma Invoice # </span>
                                </t>
                                <span t-field="o.name"/>
                            </td>
                            <td class="tm_shape_bg " t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};position: absolute;height: 100%;width: 100%; -webkit-transform: skewX(35deg); transform: skewX(35deg); top: 0px;right: -100px; overflow: hidden; left: -77px; z-index: -1;"></td>
                        </tr>
                </table>
            </div>
            <div class="row" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;width:100%; padding-top:10px;margin-left: 0;'">
                <div class="col-4"></div>
                <div class="col-8" style="padding:0">
                    <table class="table table-borderless" style="position: relative;">
                        <tr t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                            <td t-if="o.date_order">
                                <b t-if="o.state not in ['draft','sent']">Date Ordered:</b>
                                <b t-if="o.state in ['draft','sent']">Quotation Date:</b><br/>
                                <span t-field="o.date_order"/>
                            </td> 
                            <td t-if="o.client_order_ref">
                                <b>Your Reference:</b><br/>
                                <span t-field="o.client_order_ref"/>
                            </td>
                            <td t-if="o.user_id">
                                <b>Salesperson:</b><br/>
                                <p t-field="o.user_id"/>
                            </td>
                            <td t-if="o.payment_term_id and o.payment_term_id.name or ''">
                                <b class="text-left">Payment Term:</b><br/>
                                <span t-esc="o.payment_term_id and o.payment_term_id.name or '' "/>
                            </td>
                            <td t-if="o.validity_date">
                                <b>Expiration Date:</b><br/>
                                <span t-field="o.validity_date"/>
                            </td>
                        </tr>
                        <tr class="tm_shape_bg " t-attf-style="background-color: #{o.company_id and o.company_id.theme_color or '#000000'};position: absolute;height: 100%;width: 89%;-webkit-transform: skewX(35deg);transform: skewX(35deg);top: 0px;right: -97px;overflow: hidden;left: -22px;z-index: -1;"></tr>
                    </table>
                </div>
            </div>
        </div>
        
    </template>
    <template id="report_sale_creative_main">
        <t t-call="general_template.sale_creative_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <t t-call="general_template.template_watermark"/>
                <div class="oe_structure"/>
                
                <div class="container-fluid" style="padding:10px">
                    <div>
                        <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                    </div>
                    <div class="row" style="margin-top:2%">
                        <div class="col-8">
                            <t t-call="general_template.sale_templates_customer_details"/>
                            <span>Pay To:</span><br/>
                            <t t-call="general_template.templates_company_details"/>
                        </div>
                        <div class="col-4">
                            <t t-call="general_template.sale_templates_invoice_customer_details"/>
                            <t t-call="general_template.sale_templates_invoice_customer_shipping_details"/>
                        </div>
                    </div>
                    <div>
                        <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                    </div>
                    <div align="left" style="font-weight:bold; width:100%;" valign="top">
                        <t t-call="general_template.sale_order_lines_tem"/>
                        <t t-call="general_template.sale_order_lines_subtotal_tem"/>
                    </div>
                    <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                        <t t-call="general_template.template_total_amount_word"/>
                    </div>
                    <div class="left" style="color: #{text_color or '#000000'}; padding-top:20px; ">
                        <t t-call="general_template.sale_templates_notes"/>
                    </div>
                    <div t-if="o.sale_order_option_ids and o.state in ['draft', 'sent']">
                        <t t-call="general_template.sale_templates_suggested_order_line"/>
                    </div>
                    <div class="container-fluid">
                        <div class="row" style="color: #{text_color or '#000000'};">
                            <div class="col-9">
                        </div> 
                        <div class="col-3">                       
                            <t t-if="o.sale_is_show_signature == True">
                                <t t-call="general_template.report_sale_signature"/>
                            </t>
                            <t t-else="">
                                <t t-call="general_template.report_signature"/>
                            </t>
                        </div>
                    </div>
                </div>
                </div>
                <t t-call="general_template.report_barcode"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    <template id="report_sale_order_custom_creative">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-call="general_template.report_sale_creative_main" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
