<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--template id="template_invoice_style" inherit_id="web.report_assets_common">
        <xpath expr=".">
            <link href="/general_template/static/src/css/template.css" rel="stylesheet"/>
        </xpath>
    </template-->
    <template id="template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.template_footer"/>
    </template>
    <template id="template_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table class="table table-borderless" border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table class="table table-borderless" border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" valign="middle">
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td align="left" valign="middle">
                                                                    <t t-if="o.company_id.invoice_logo">
                                                                        <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 80px;" t-if="o.company_id.logo"/>
                                                                    </t>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                    <td align="right" rowspan="3" style="width:60%;">
                                                        <p t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};background-color: #{o.company_id and o.company_id.theme_color or '#000000'}; text-align:center; text-transform:uppercase; padding:5px 0px; width:60%;font-size:35px">
                                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
            
        </div>
    </template>
    <template id="report_invoice_template_main">
        <t t-call="general_template.template_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.template_watermark"/>
                <div border="0" cellpadding="0" cellspacing="0" width="100%">
                    <div class="container-fluid">
                        
                        <div class="row" valign="top" >
                            <div class="col-4" colspan="1" style="margin-top:15px;">
                                <div style="margin-right:15px;background-color:#C0C0C0; height:20px;border: 2px solid #C0C0C0;border-radius: 10px;padding: 5px;"></div>
                            </div>
                            <div class="col-8" t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                <table class="table table-borderless">
                                    <tr t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold;background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                        <td t-if="o.move_type == 'out_invoice'">
                                            <b>Invoice Date:</b>
                                            <span t-esc="o._get_invoice_date()"/>
                                        </td>
                                        <td t-if="o.payment_reference">
                                            <b>Invoice No:</b>
                                            <span t-field="o.payment_reference"/>
                                        </td>
                                        <td t-if="o.amount_total">
                                            <b>Grand Total:</b>
                                            <span t-field="o.amount_total"/>

                                        </td>
                                        
                                        <td t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'">
                                            <b>Due Date:</b>
                                            <span t-esc="o._get_invoice_due_date()"/>
                                        </td>
                                        
                                        <td t-if="o.source_id">
                                            <b>Source:</b>
                                            <span t-esc="o.source_id.name"/>
                                        </td>
                                       
                                        <td t-if="o.partner_id.ref">
                                            <b>Customer code:</b>
                                            <span t-esc="o.partner_id.ref"/>
                                        </td>
                                        <td t-if="o.invoice_origin">
                                            <b t-if="o.move_type in ('out_invoice','out_refund')">SO:</b>
                                            <b t-if="o.move_type in ('in_invoice', 'in_refund')">PO:</b>
                                            <span t-field="o.invoice_origin"/>

                                        </td>
                                        <td t-if="o._get_origin_date(o.invoice_origin)">
                                            <b>Order Date:</b>
                                            <span t-esc="o._get_origin_date(o.invoice_origin)"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div>
                            <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                        </div>
                        <div class="row">
                            
                            
                            <div class="col-5">
                                <t t-call="general_template.invoice_templates_customer_details"/>
                            </div>
                            <div class="col-4">
                                <t t-call="general_template.invoice_templates_customer_shipping_details"/>
                            </div>
                            <div class="col-3">
                                <span t-attf-style="color: #{theme_color or '#ffffff'}; font-weight:bold;">Pay to:</span><br/>
                                <t t-call="general_template.templates_company_details"/>
                            </div>
                        </div>
                        <div>
                            <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                        </div>
                        <div style="padding:5px 0px 0 0; font-weight:bold; width:100%;" >
                            <t t-call="general_template.report_invoice_order_lines"/>
                        </div>
                        <div>
                            <t t-call="general_template.invoice_subtotal_tem" />
                        </div>
                        <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                            <t t-call="general_template.template_total_amount_word"/>
                        </div>
                        <div t-if="not o._compute_payments_widget_reconciled_info()">
                            <p t-att-style="'font-weight:bold; color:#000; margin-bottom:0; text-transform:capitalize; margin-top:8px; color: %s;' % (text_color)">
                            Payment Status: 
                                <span t-esc="dict(o._fields['payment_state']._description_selection(o.env)).get(o.payment_state)"/>
                            </p>
                        </div>
                        <div class="pull-left" style="color: #{text_color or '#000000'}; padding-top:5px; ">
                            <t t-call="general_template.report_invoice_notes"/>
                        </div>
                        <div align="right"  style="color: #{text_color or '#000000'};">
                            <t t-call="general_template.report_invoice_signature"/>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="report_invoice_template_custom">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-call="general_template.report_invoice_template_main" t-lang="lang"/>
            </t>
        </t>
    </template>
    <template id="report_invoice_template_main_duplicate" inherit_id="general_template.report_invoice_template_main" primary="True">
       <!--  <xpath expr="//div[@t-if='not o._compute_payments_widget_reconciled_info()'] " position="before">
            <t t-call="general_template.report_invoice_payment_move_line"/>
        </xpath> -->
    </template>
    <template id="account.report_invoice">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-set="r_name" t-value="o.report_template_id and o.report_template_id.report_name or o.partner_id and o.partner_id.report_template_id and o.partner_id.report_template_id.report_name or o.company_id and o.company_id.report_template_id and o.company_id.report_template_id.report_name"/>
                <t t-set="real_name" t-value="r_name.split('.')"/>
                <t t-if="o.report_template_id or o.partner_id and o.partner_id.report_template_id or o.company_id and o.company_id.report_template_id">
                    <t t-call="general_template.report_invoice_template_main" t-if="r_name == 'general_template.report_invoice_template_custom'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_advanced_main" t-if="r_name == 'general_template.report_invoice_template_custom_advanced'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_elegant_main" t-if="r_name == 'general_template.report_invoice_template_custom_elegant'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_exclusive_main" t-if="r_name == 'general_template.report_invoice_template_custom_exclusive'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_creative_main" t-if="r_name == 'general_template.report_invoice_template_custom_creative'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_incredible_main" t-if="r_name == 'general_template.report_invoice_template_custom_incredible'" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>
    <template id="account.report_invoice_with_payments">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-set="print_with_payments" t-value="True"/>
                <t t-set="r_name" t-value="o.report_template_id and o.report_template_id.report_name or o.partner_id and o.partner_id.report_template_id and o.partner_id.report_template_id.report_name or o.company_id and o.company_id.report_template_id and o.company_id.report_template_id.report_name"/>
                <t t-set="real_name" t-value="r_name.split('.')"/>
                <t t-if="o.report_template_id or o.partner_id and o.partner_id.report_template_id or o.company_id and o.company_id.report_template_id">
                    <t t-call="general_template.report_invoice_template_main_duplicate" t-if="r_name == 'general_template.report_invoice_template_custom'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_advanced_main_duplicate" t-if="r_name == 'general_template.report_invoice_template_custom_advanced'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_elegant_main_duplicate" t-if="r_name == 'general_template.report_invoice_template_custom_elegant'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_exclusive_main_duplicate" t-if="r_name == 'general_template.report_invoice_template_custom_exclusive'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_creative_main_duplicate" t-if="r_name == 'general_template.report_invoice_template_custom_creative'" t-lang="lang"/>
                    <t t-call="general_template.report_invoice_incredible_main_duplicate" t-if="r_name == 'general_template.report_invoice_template_custom_incredible'" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
