<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="exclusive_external_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="general_template.exclusive_header"/>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
            <t t-call="general_template.template_footer"/>
        </template>
        <template id="exclusive_header">
            <div class="header container" style="width:100%;height:10%" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="row">
                    <div class="col-9">
                        <t t-if="o.company_id.invoice_logo or o.company_id.logo">
                            <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 80px;" t-if="o.company_id.logo"/>
                        </t>
                    </div>
                    <div class="col-3">
                        <t t-if="o.company_id.street">
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.street"/><br/>
                        </t>
                        <t t-if="o.company_id.phone">
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.phone"/><br/>
                        </t>
                        <t t-if="o.company_id.email">
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.email"/><br/>
                        </t>
                        <t t-if="o.company_id.website">
                            <span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#000000'};" t-field="o.company_id.website"/>
                        </t>
                    </div>
                </div>
                <div>
                    <p t-attf-style="border-bottom:1px solid #{theme_color};width:100%;padding:10px;"/>
                </div>
            </div>
        </template>
        <template id="report_invoice_exclusive_main">
            <t t-call="general_template.exclusive_external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                    <div class="oe_structure"/>
                    <t t-call="general_template.template_watermark"/>
                    <div>
                        <p t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};font-weight:bold;width:60%;font-size:35px;">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            <span t-if="o.name != '/'" t-field="o.name"/>
                        </p>
                    </div>
                    <div>
                        <p t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};width:100%;border-radius: 20px;padding: 10px;">
                            <t t-if="o.move_type == 'out_invoice'">
                              
                                    <span>Invoice Date:</span>
                                    <span t-esc="o._get_invoice_date()"/><br/>
                               
                            </t>
                            <t t-if="o.payment_reference">
                                
                                    <span>Invoice No:</span>
                                    <span t-field="o.payment_reference"/><br/>
                                
                            </t>
                            <t t-if="o.amount_total">
                               
                                    <span>Grand Total:</span>
                                    <span t-field="o.amount_total"/><br/>
                                                        
                            </t>
                            
                            <t t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'">
                               
                                    <span>Due Date:</span>
                                    <span t-esc="o._get_invoice_due_date()"/><br/>
                                                      
                            </t>
                            <t t-if="o.source_id.name">
                                
                                    <span>Source:</span>
                                    <span t-esc="o.source_id.name"/><br/>
                                                        
                            </t>
                            <t t-if="o.partner_id.ref">
                                
                                    <span>Customer code:</span>
                                    <span t-esc="o.partner_id.ref"/><br/>
                               
                           </t>
                           <t t-if="o.invoice_origin">
                              
                                   <span t-if="o.move_type in ('out_invoice','out_refund')">SO:</span>
                                   <span t-if="o.move_type in ('in_invoice', 'in_refund')">PO:</span>
                                   <span t-field="o.invoice_origin"/><br/>
                                                       
                           </t>
                           <t t-if="o._get_origin_date(o.invoice_origin)">
                               
                                   <span>Order Date:</span>
                                   <span t-esc="o._get_origin_date(o.invoice_origin)"/><br/>
                                                       
                           </t>
                        </p>
                    </div>
                    <div t-attf-style="color: #{o.company_id and o.company_id.text_color or '#000000'};">
                        <div class="row" t-attf-style="color: #{o.company_id and o.company_id.text_color or '#000000'};justify-content: space-between;">
                            <div class="col-4" style="border-radius: 10px;border: 2px solid #666;padding: 5px;height:auto;margin:0.4%;">
                                <t t-call="general_template.invoice_templates_customer_details"/>
                            </div>
                            <div class="col-4">
                            <t t-if="o.partner_shipping_id  and o.partner_shipping_id != o.partner_id">
                                <div style="border-radius: 10px;border: 2px solid #666;padding: 5px;height: auto;margin:0.4%;">
                                <t t-call="general_template.invoice_templates_customer_shipping_details"/>
                                </div>
                            </t>
                            </div>
                            <div class="col-4" style="border-radius: 10px;border: 2px solid #666;padding: 10px;height:auto;margin:0.4%;"><strong t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};">Pay to:</strong><br/>
                                <t t-call="general_template.templates_company_details"/>
                            </div>
                            
                        </div>
                    </div>
                    <div>
                        <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:5px"/>
                    </div>
                    <div style="padding:0px 0px 0 0; font-weight:bold; width:100%;" >
                        <t t-call="general_template.report_invoice_order_lines"/>
                    </div>
                    <div>
                        <t t-call="general_template.invoice_subtotal_tem" />
                    </div>
                    <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                        <t t-call="general_template.template_total_amount_word"/>
                    </div>
                    <div t-if="not o._compute_payments_widget_reconciled_info()">
                        <p t-att-style="'font-weight:bold; color:#000; margin-bottom:0; text-transform:capitalize; margin-top:8px; color: %s;' % (text_color)">
                            Payment Status: 
                            <span t-esc="dict(o._fields['payment_state']._description_selection(o.env)).get(o.payment_state)"/>
                        </p>
                    </div>
                    <div class="pull-left" style="color: #{text_color or '#000000'}; padding-top:5px; ">
                        <t t-call="general_template.report_invoice_notes"/>
                    </div>
                    <div align="right"  style="color: #{text_color or '#000000'};">
                        <t t-call="general_template.report_invoice_signature"/>
                    </div>
                    <div class="oe_structure"/>
                    <t t-call="general_template.report_invoice_barcode"/>
                </div>
            </t>
        </template>
        <template id="report_invoice_template_custom_exclusive">
            <t t-call="web.html_container">
                <t t-as="o" t-foreach="docs">
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <t t-call="general_template.report_invoice_exclusive_main" t-lang="lang"/>
                </t>
            </t>
        </template>
        <template id="report_invoice_exclusive_main_duplicate" inherit_id="general_template.report_invoice_exclusive_main" primary="True">
            <!-- <xpath expr="//div[@t-if='not o._compute_payments_widget_reconciled_info()']" position="before">
                <t t-call="general_template.report_invoice_payment_move_line"/>
            </xpath> -->
        </template>
    </data>
</odoo>
