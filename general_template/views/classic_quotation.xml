<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="quotation_incredible_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="general_template.quotation_incredible_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>
    <template id="quotation_incredible_header">
        <div class="header container" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <div class="row">
                <div class="col-9">
                    <t t-if="o.company_id.invoice_logo">
                        <img t-att-src="image_data_uri(o.company_id.invoice_logo)" style="max-height: 80px;" t-if="o.company_id.logo"/>
                    </t>
                </div>
                <div class="col-3" >
                    <t t-call="general_template.templates_company_details"/>
                </div>
            </div>
            <div>
                <p t-attf-style="border-bottom:1px solid #{theme_color}; padding:5px"/>
            </div>
        </div>
    </template>
    <template id="report_quotation_incredible_main">
        <t t-call="general_template.quotation_incredible_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.templates_watermark"/>
                <div  width="100%">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-8" valign="top">
                                <div  t-attf-style="color: #{o.company_id and o.company_id.theme_color or '#000000'};font-size:35px;">
                                        
                                    <span>Request for Quotation # </span> 
                                </div>
                                <div style="margin-top:2%">
                                    <t t-call="general_template.templates_customer_details"/>
                                    <div t-attf-style="border-top:1px solid #{theme_color or '#000000'};width:50%;margin-top:2%;">
                                        <t t-call="general_template.templates_warehouse_details"/>
                                    </div>
                                </div>
                                    
                            </div>
                            <div class="col-4" valign="top">
                                <table class="table table-borderless" border="0" cellpadding="0" cellspacing="0" t-attf-style="color: #{o.company_id and o.company_id.theme_text_color or '#000000'};font-weight:bold; background-color: #{o.company_id and o.company_id.theme_color or '#000000'};">
                                    <tr>
                                        <td style="padding:9px 15px; font-weight:bold;">
                                            <span t-if="o.state not in ['draft']">Purchase Order Confirmation # </span>
                                            <span t-if="o.state in ['draft']">Request for Quotation # </span> 
                                        </td>
                                        <td style="text-align:right; font-weight:bold;padding:9px 15px;">
                                            <span t-field="o.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="background-color:#f2f2f2; height:4px;"/>
                                    </tr>
                                    <tr>
                                        <td style="padding:9px 15px;border-bottom:1px solid #999; white-space: nowrap;">
                                            <strong t-if="o.state not in ['draft']">Date Ordered:</strong>
                                            <strong t-if="o.state in ['draft']">Quotation Date:</strong>
                                        </td>
                                        <td style="padding:9px 15px;">
                                            <span t-field="o.date_order"/>
                                        </td>
                                    </tr>
                                    <tr t-if="o.partner_ref">
                                        <td style="padding:9px 15px;border-bottom:1px solid #999; white-space: nowrap;">
                                            <b>Your Order Reference:</b>
                                        </td>
                                        <td style="padding:9px 15px">
                                            <span t-field="o.partner_ref"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div>
                        <p  t-attf-style="padding:5px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                    </div>
                    <div>
                        <t t-call="general_template.quotation_template_order_lines"/>
                    </div>
                    <div t-attf-style="border-top:1px solid #{'#959595'};color: #{text_color or '#000000'}; padding-top:5px; width:100%;" t-if="o.notes and o.company_id.is_show_notes == True">
                        <p t-field="o.notes"/>
                    </div>
                    <div align="right" t-attf-style="color: #{text_color or '#000000'};">
                        <t t-call="general_template.report_signature"/>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
            <t t-call="general_template.report_barcode"/>
        </t>
    </template>
    <template id="report_quotation_custom_incredible">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-set="o" t-value="o.with_context(lang=lang)" /> 
                <t t-call="general_template.report_quotation_incredible_main" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
