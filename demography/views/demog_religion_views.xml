<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_demog_religion_tree" model="ir.ui.view">
        <field name="name">demog.religion.tree</field>
        <field name="model">demog.religion</field>
        <field name="arch" type="xml">
            <tree string="Religions">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="description" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_demog_religion_form" model="ir.ui.view">
        <field name="name">demog.religion.form</field>
        <field name="model">demog.religion</field>
        <field name="arch" type="xml">
            <form string="Religion">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter religion name..."/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Enter code..."/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Enter detailed description of this religion..." nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_demog_religion_search" model="ir.ui.view">
        <field name="name">demog.religion.search</field>
        <field name="model">demog.religion</field>
        <field name="arch" type="xml">
            <search string="Search Religions">
                <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>

                <filter name="group_by_sequence" string="Group by Sequence" context="{'group_by':'sequence'}"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter name="group_by_code" string="Code" context="{'group_by':'code'}"/>
                </group>
            </search>
        </field>
    </record>

