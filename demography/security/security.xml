<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Group definition -->
        <record id="group_demography_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Access controls -->

        <record id="access_demog_ethnic_group" model="ir.model.access">
            <field name="name">demog.ethnic.group access</field>
            <field name="model_id" ref="model_demog_ethnic_group"/>
            <field name="group_id" ref="group_demography_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <record id="access_demog_religion" model="ir.model.access">
            <field name="name">demog.religion access</field>
            <field name="model_id" ref="model_demog_religion"/>
            <field name="group_id" ref="group_demography_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>
        <record id="access_demog" model="ir.model.access">
            <field name="name">demog access</field>
            <field name="model_id" ref="model_demog"/>
            <field name="group_id" ref="group_demography_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>
    </data>
</odoo>