<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_material_request_tree" model="ir.ui.view">
        <field name="name">material.request.tree</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="matreial_number" />
                <field name="company_id"/>
                <field name="location_id"/>
                <field name="using_user"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>   
    

    <record id="view_material_request_from" model="ir.ui.view">
    <field name="name">material_request.form</field>
    <field name="model">material.request</field>
    <field name="arch" type="xml">
        <form>
            <header class="material_request">
                <button name="to_created_asset" 
                        type="object" 
                        string="To Created Asset" 
                        class="oe_highlight" 
                        invisible="state != 'draft' or has_access != True"
                        groups='dhs_asset_mgt.group_it_asset_officer'/>
                <button name="to_deliverd" 
                        type="object" 
                        string="To Deliverd" 
                        class="oe_highlight" 
                        invisible="state != 'createdAsset' or has_access != True"
                        groups='dhs_asset_mgt.group_it_asset_officer'/>
                <field
                    name="state"
                    widget="statusbar"
                    clickable="1"
                    statusbar_visible="draft,createdAsset,deliverd"
                />
            </header>
            <sheet>
                <field name="has_access" invisible="1" readonly="state != 'draft'"/>
                <group>
                    <group>
                        <field name="matreial_number" readonly="1" />
                        <field name="company_id" readonly="state != 'draft'" options="{'no_open': True, 'no_create': True}"/>
                        <field name="location_id" readonly="state != 'draft'"  options="{'no_open': True, 'no_create': True}"/>
                    </group>
                    <group>
                        <field name="using_user" readonly="state != 'draft'" options="{'no_open': True, 'no_create': True}"/>                        
                        <field name="operation_reference" readonly="1"/>                        
                    </group>
                </group>
                <notebook>
                    <page string="Products">
                        <field name="material_request_product" readonly="state != 'draft'" >
                            <tree editable="bottom">
                                <field name="product_id" width="20%"/>
                                <field name="quantity" width="20%"/>
                                <field name="request_location_id" width="20%"/>
                                <field name="product_qty_available" column_invisible="parent.state != 'draft'"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Assets">
                        <field name="asset_ids" readonly="1" >
                            <tree>
                                <field name="asset_number" string="Component Number"/>
                                <field name="product_id"/>
                                <field name="using_user"/>
                                <field name="asser_kind"/> 
                                <field name="component_serial_number" />
                                <field name="license" />
                            </tree>
                        </field>
                    </page>
                    <page string="Notes">
                        <field name="note" readonly="state != 'draft'" />                       
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" groups="base.group_user"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
    </record>


        <record id="action_material_request" model="ir.actions.act_window">
            <field name="name">Material Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Uploud Your First Data !
                </p>
            </field>
        </record>
        

            
</odoo>
