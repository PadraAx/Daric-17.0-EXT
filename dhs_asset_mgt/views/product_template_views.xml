<odoo>
    <data>     

        <record id="view_product_brand_form" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Brand Form">
                    <sheet>
                        <div class="oe_title mb32">
                            <h1><field name="name" placeholder="Name"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_product_brand_tree" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree string="Brand Tree" sample="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        
         <record id="product_brand_action" model="ir.actions.act_window">
            <field name="name">Product Brand</field>
            <field name="res_model">product.brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="product_template_only_form_view_asset" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit.asset</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="product_brand"/>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='cost_currency_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_template_ext_kanban" model="ir.ui.view">
            <field name="name">product.template.ext.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='product_lst_price']" position="replace">
                    Price: <field name="standard_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"></field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>