<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="mail_template_asset_component" model="mail.template">
            <field name="name">Asset Notification</field>
            <field name="model_id" ref="dhs_asset_mgt.model_asset_component"/>
            <field name="subject">The {{ ctx.get('user').name }} got another asset</field>
            <field name="email_from">{{ ctx.get('user').company_id.email }}</field>
            <field name="email_to">{{ ctx.get('admin').email }}</field>
            <field name="description">Notification of asset receipt for the manager</field>
            <field name="body_html" type="html">
                <h2 style="color:#333">Dear <t t-esc="ctx.get('admin').name"/></h2>
                <p style="color:#333">The user <t t-esc="ctx.get('record').using_user.name"/> got another <t t-esc="ctx.get('record').product_id.name"/> asset</p>
            </field>
        </record>

    </data>
</odoo>
