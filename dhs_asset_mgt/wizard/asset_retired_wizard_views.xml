<odoo>
    <data>
        <record id="view_asset_retired_wizard_form" model="ir.ui.view">
            <field name="name">asset.retired.wizard.form</field>
            <field name="model">asset.retired.wizard</field>
            <field name="arch" type="xml">
                <form string="Retired">
                    <group>                        
                        <group>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="asset_id" invisible="1"  force_save="1"/>
                            <field name="product_id" />
                        </group>
                    </group>
                    <footer>
                        <button string="Apply" type="object" name="action_asset_retired" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
