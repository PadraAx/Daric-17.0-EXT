<?xml version="1.0"  encoding="utf-8"?>
<odoo>
	<record id="view_loan_type_tree" model="ir.ui.view">
	   	<field name="name">loan.type.tree</field>
	   	<field name="model">loan.type</field>
	   	<field name="priority">2</field>
	   	<field name="arch" type="xml">
		    <tree string="Loan Type">
		     	<field name="name"/>
		     	<field  name="code"/>
		     	<field name="is_interest_payable"/>
		     	<field name="rate"/>
		      	<field name="interest_mode"/>
		        <field name="disburse_method"/>
		        <field name="company_id"/>
		    </tree>
	   	</field>
    </record>
        
    <record id="view_loan_type_form" model="ir.ui.view">
	   	<field name="name">loan.type.form</field>
	   	<field name="model">loan.type</field>
	   	<field name="priority">2</field>
	   	<field name="arch" type="xml">
	    	<form string="Loan Type">
		    	<sheet>
		    		<h2>
		    			Name
		    			<field name="name"/>
		    			<br/>
		    			Code
		    			<field name="code"/>
		    		</h2>
		    		<group string="General">
		    			<group >
		    				<field name="is_interest_payable"/>
		    				<field name="hide_interest" invisible='1'/>
		    				<field name="interest_mode" invisible="hide_interest"/>
		    				<field name="rate" invisible="hide_interest"/>
		    			</group>
		    			<group>
		        			<field name="disburse_method"/>
		        			<field name="company_id"/>
		    			</group>
		    		</group>
		    		<group string="Loan Proofs">
		    			<div>
		    				<label for="loan_proof_ids"/>
		    			</div>
		    			<div>
		    				<field name="loan_proof_ids" style="width:190%;" nolabel="1"/>
		    			</div>
		    		</group>
		    		<group>
		    			<div style="width:80px;">
		    				<label for="employee_category_ids"/>
		    			</div>
		    			<div>
		    				<field name="employee_category_ids" style="width:190%;" nolabel="1"/>
		    			</div>
		    		</group>
		    		<group>
		    			<div>
		    				<label for="employee_ids"/>
		    			</div>
		    			<div>
		    				<field name="employee_ids" style="width:190%;" nolabel="1">
		    					<tree>
		    						<field name="name"/>
		    						<field name="work_phone"/>
		    						<field name="work_email"/>
		    						<field name="department_id"/>
		    						<field name="job_id"/>
		    						<field name="parent_id"/>
		    					</tree>
		    				</field>
		    			</div>
		    		</group>
		     	</sheet>
	 		</form>
		</field>
	</record>

	<record id="loan_type_action" model="ir.actions.act_window">
	  	<field name="name">Loan Type</field>
	  	<field name="type">ir.actions.act_window</field>
	  	<field name="res_model">loan.type</field>
	  	<field name="view_mode">tree,form,kanban</field>
	  	<field name="help" type="html">
	   		<p class="oe_view_nocontent_create"> </p>
	   		<p></p>
	  	</field>
	</record>

	<menuitem action="loan_type_action" id="menu_loan_type" parent="config_menu_loan" name="Loan Type" sequence="29"/>
</odoo>