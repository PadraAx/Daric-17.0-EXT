<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mailchimp_log_form" model="ir.ui.view">
            <field name="name">mailchimp.log.form</field>
            <field name="model">mailchimp.log</field>
            <field name="arch" type="xml">
                <form string="MailChimp Log" create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Log Name"/>
                            <h1>
                                <field name="name" placeholder="Log Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="during"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Lines" string="Lines">
                                <field name="log_line" nolabel="1">
                                    <tree string="MailChimp Lists/Audiences" create="false">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="req_data" invisible="1"/>
                                        <button name="redirect_to_log_record" title="Redirect to Contact" type="object" icon="fa-arrow-right"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_mailchimp_log_tree" model="ir.ui.view">
            <field name="name">mailchimp.log.tree</field>
            <field name="model">mailchimp.log</field>
            <field name="arch" type="xml">
                <tree string="MailChimp Log" create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="during"/>
                </tree>
            </field>
        </record>

        <record id="action_mailchimp_logs" model="ir.actions.act_window">
            <field name="name">MailChimp Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mailchimp.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new MailChimp Log.
                </p>
            </field>
        </record>

        <menuitem name="Mailchimp Logs" parent="mailchimp.menu_mailchimp_root"
                  action="action_mailchimp_logs" id="menu_action_mailchimp_log"
                  sequence="110"/>
    </data>
</odoo>
