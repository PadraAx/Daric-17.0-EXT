<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="company_address_noname" name="Company No name Address">
        <div t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": false}'/>                                      
        <div t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["email"], "no_marker": false}'/>                                      
        <div t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["website"], "no_marker": false}'/>                                      
        <p style="margin-bottom:0px; padding-top:0px;"><span t-if="company.vat">VAT: <span t-field="company.vat"/></span></p>
    </template>
</data>
</odoo>

