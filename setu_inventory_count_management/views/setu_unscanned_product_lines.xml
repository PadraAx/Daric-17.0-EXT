<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="setu_unscanned_product_lines" model="ir.ui.view">
            <field name="name">setu.unscanned.product.lines.tree</field>
            <field name="model">setu.unscanned.product.lines</field>
            <field name="arch" type="xml">
                <tree string="Unscanned Products" create="0" edit="0" default_order="id desc">
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="quantity"/>
                    <field name="location_id"/>
                    <field name="action"/>
                </tree>
            </field>
        </record>

        <record id="setu_unscanned_product_lines_search_view" model="ir.ui.view">
            <field name="name">setu.unscanned.product.lines.search</field>
            <field name="model">setu.unscanned.product.lines</field>
            <field name="arch" type="xml">
                <search string="Un-scanned Product Lines">
                    <field name="product_id" string="Product"
                           filter_domain="['|','|',('lot_id','ilike',self),
                           ('product_id','ilike',self),('location_id','ilike',self)]"/>
                    <field name="lot_id"/>
                    <field name="location_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Product" name="group_by_product" domain="[]"
                                context="{'group_by':'product_id'}"/>
                        <filter string="Lot" name="group_by_lot" domain="[]"
                                context="{'group_by':'lot_id'}"/>
                        <filter string="Location" name="group_by_location" domain="[]"
                                context="{'group_by':'location_id'}"/>
                        <filter string="Action Taken" name="group_by_action" domain="[]"
                                context="{'group_by':'action'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_set_action_for_unscanned_producrs" model="ir.actions.server">
            <field name="name">Set Action For Unscanned Products</field>
            <field name="model_id" ref="setu_inventory_count_management.model_setu_unscanned_product_action_wizard"/>
            <field name="binding_model_id" ref="setu_inventory_count_management.model_setu_unscanned_product_lines"
            />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = model.action_open_wizard()
            </field>
        </record>

        <record id="setu_unscanned_product_lines_action" model="ir.actions.act_window">
            <field name="name">Unscanned Products Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setu.unscanned.product.lines</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>
