                    <h4 class="col-4 col-md-3 col-xs-12 inner_z_index mb-0" t-att-no="shopping.id">
                      <div class="e-p-s-list-name">
                        <t t-esc="shopping.name" />
                      </div>
                      <span class="open-e-sp-name">
                        <i class="fa fa-pencil-square-o"></i>
