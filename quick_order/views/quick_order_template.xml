    <template id="header" inherit_id="website_sale.header_cart_link" name="Quick Order" customize_show="True">
      <xpath expr="//t[@t-nocache-_icon='_icon']" position="after">
        <t t-set="website_sale_order" t-value="website.sale_get_order()" />
        <li class="nav-item" id="my_cart">
          <t t-set="langConfig" t-value="request.env['res.lang'].search([('code','=',request.env.lang)])" />
          <a id="lanfConfig" class="nav-link" href="/quickorder" t-att-decimal_point="langConfig.decimal_point" t-att-thousands_sep="langConfig.thousands_sep" t-att-grouping="langConfig.grouping">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lightning-charge" viewBox="0 0 16 16">
              <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09zM4.157 8.5H7a.5.5 0 0 1 .478.647L6.11 13.59l5.732-6.09H9a.5.5 0 0 1-.478-.647L9.89 2.41 4.157 8.5z"/>
            </svg> Quick Orders
          </a>
        </li>
      </xpath>
    </template>

    <template id="quick_search_main_template">
      <t t-call="website.layout">
        <div t-if="warning" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="10000" class="toast position-absolute end-0 show" data-bs-autohide="true" style="z-index:1">
          <div class="toast-header bg-warning text-secondary">
            <strong class="me-auto">Warning</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
    We removed product from your Quick order line because it is no longer available
          </div>
        </div>
        <div class="container container-text">
          <!-- <div class="side_button d-md-none">
            <t t-call="quick_order.quick_order_cart_button" />
          </div> -->
          <div class="outer">
            <div >
              <div class="row">
                <div class="col-md-9">
                  <h2 style="margin-top: 15px;">Quick Order</h2>
                  <p class="text-body">Create &amp; save your own shopping list for quick checkout.</p>
                </div>
                <div class="sp-mn-button col-md-3">
                  <t t-call="quick_order.shopping_list_hover_button" />
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="outer col-5 order-1">
              <t t-set="table_hreader_render" t-value="True if request.httprequest.full_path.startswith('/quickorder/shoppinglist') else False"/>
              <p t-if="not table_hreader_render" class="text-muted" style="margin-bottom: 0px;font-size: 12px;font-weight: bold;">ADDED PRODUCTS</p>
              <div class="panel-create alert-error" id="no_products" t-att-style="'display:block;' if not order_quicks else 'display:none;'">
                <div class="" style="text-align:center;">
                  <img src="/quick_order/static/src/img/empty-illustration.png" style="height: 50px; width: 50px;"/>
                  <br/>
                  <p>
                    <t t-esc="error['error']" />
                  </p>
                </div>
              </div>
              <div class="panel-create alert-success" style="display:none;"></div>
              <div class="col-md-12" t-att-style="'display:block;' if order_quicks else 'display:none;'" id="order_quick_table">
                <t t-call="quick_order.add_to_cart_mutliple" />
              </div>
            </div>
            <div class="outer col-7 order-0" id="body">
              <p class="text-muted" style="margin-bottom: 0px;font-size: 12px;font-weight: bold;">SELECT PRODUCTS TO ADD</p>
              <div style="margin: 4px 0px 8px 0px;padding: 0px 12px 12px 12px;box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);">
                <div class="col-md-12" style="padding: 0px;">
                  <div class="add_to_cart" style="border: none; border-bottom: 1px solid #dee2e6">
                    <div class="">
                      <div class="row p-1" style="margin: 0px;justify-content: space-between;">
                        <div class="col-md-6 col-sm-12 p-2">
                          <form method="get" class="form" id="search_quick_render">
                            <t t-call="website.website_search_box">
                              <t t-set="search_class" t-value="'pagination form-inline o_website_sale_search'"/>
                            </t>
                          </form>
                        </div>
                        <div class="col-md-6 col-sm-12 row my-auto">
                          <div class="col">
                            <button id="refresh_table" class="btn btn-primary">
                              <i class="fa fa-refresh"></i>
                            </button>
                          </div>
                          <div class="col" style="padding: 0px;">
                            <div id="top_pager">
                              <ul t-if="pager['page_count'] > 1" t-attf-class="ml-2 #{ classname or '' } pagination" t-att-style="style or None">
                                <li t-att-class=" 'disabled' if pager['page']['num'] == 1 else None ">
                                  <a t-att-href=" pager['page_previous']['url'] if pager['page']['num'] != 1 else None" class="page-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
                                      <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z"/>
                                    </svg>
                                  </a>
                                </li>
                                <li t-att-class=" 'disabled' if pager['page']['num'] == pager['page_count'] else None ">
                                  <a t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None" class="page-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-right-square-fill" viewBox="0 0 16 16">
                                      <path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v12zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1z"/>
                                    </svg>
                                  </a>
                                </li>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div id="search_table_render_here">
                  <t t-call="quick_order.main_table_data" />
                </div>
              </div>
              <div id="row_select_model" />
              <t t-call="quick_order.shopping_list_confirm_model" />
            </div>
          </div>
        </div>
      </t>
    </template>

    <template id="main_table_data">
      <div t-if="products" class="table-content col-md-12" style="padding:0px;" id="tableitems">
        <div class="table-items table-responsive-mobile custom-scroll-bar">
          <div class="load-search">
            <div class="load-search-data">
              <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
              <span class="sr-only">Loading...</span>
            </div>
          </div>
          <table class="table table-sm">
            <thead>
              <tr>
                <th class="text-black-50">INTERNAL REFERENCE</th>
                <th class="text-black-50">IMAGE</th>
                <th class="text-black-50">PRODUCT</th>
                <th class="text-black-50">PRICE </th>
                <th />
              </tr>
            </thead>
            <tbody>
              <t t-foreach="products" t-as="product">
                <tr class="clickable" t-att-data-oe-id = "product.id">
                  <td class="slid-up-table">
                    <t t-esc="product.default_code" />
                  </td>
                  <td class="main-table-td slid-up-table">

                    <a t-attf-href="/shop/product/#{ slug(product) }">
                      <span t-field="product.image_1920" t-options="{'widget': 'image', 'class': 'img-rounded', 'style': 'max-width: 100px; max-height:100px;'}" />
                    </a>
                  </td>
                  <td>
                    <a t-attf-href="/shop/product/#{ slug(product) }" style="font-weight: bold;">
                      <t t-esc="product.name" />
                    </a>
                  </td>
                  <td>
                    <b>
                      <t t-set="combination_info" t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1)"/>
                      <t t-if="True">
                        <del t-attf-class="text-danger mr8 {{'' if combination_info['has_discounted_price'] else 'd-none'}}" style="white-space: nowrap;" t-esc="combination_info['list_price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}" />
                      </t>
                      <span t-if="combination_info['price']" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                      <span itemprop="price" style="display:none;" t-esc="combination_info['price']" />
                      <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name" />
                    </b>
                  </td>
                  <td>
                    <button class="btn btn-primary" id="add_in_orderline">
                      <span class="fa fa-plus" />
                    </button>
                  </td>
                </tr>
              </t>
            </tbody>
            <tr t-if="pager['page_count'] > 1" id="tr">
              <td class="col-md-12" colspan="4">
                <div class="col-md-12 pager">
                  <div class="pager-page">
                    <t t-call="quick_order.pagination" />
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div t-if="not products">
        <t t-call="quick_order.404" />
      </div>
    </template>

    <template id="pagination">
      <ul t-if="pager['page_count'] > 1" t-attf-class="#{ classname or '' } pagination  m-0 ml-2" t-att-style="style or None">
        <li t-att-class=" 'page-item disabled' if pager['page']['num'] == 1 else 'page-item' ">
          <a class="page-link" t-att-href=" pager['page_previous']['url'] if pager['page']['num'] != 1 else None">
            <i class="fa fa-caret-left"></i>
          </a>
        </li>
        <t t-foreach="pager['pages']" t-as="page">
          <li t-att-class=" 'active page-item' if page['num'] == pager['page']['num'] else 'page-item' ">
            <a class="page-link" t-att-href="page['url']" t-raw="page['num']"></a>
          </li>
        </t>
        <li t-att-class=" 'page-item disabled' if pager['page']['num'] == pager['page_count'] else 'page-item' ">
          <a class="page-link" t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None">
            <i class="fa fa-caret-right"></i>
          </a>
        </li>
      </ul>
    </template>

    <template id="row_select_model">
      <div class="modal modal-variants fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="mb-0">Select Variants</h4>
              <span class="close close-m" data-dismiss="modal">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                  <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                </svg>
              </span>
            </div>
            <div class="modal-body">
              <div class="variants-c">
                <h5 id="product_name" class="mb-2">
                  <t t-esc="docs.name" />
                </h5>
                <div style="display: inline-block">
                  <label class="select_all_variants text-dark mb-4">
                    <input type="checkbox"/>
                    <span class="check-modal" />
                    Select All
                  </label>
                </div>
                <div t-if="docs.product_variant_ids" class="table-content col-md-12" style="padding:0px;" id="tableitems">
                  <div class="table-items table-responsive-mobile custom-scroll-bar">
                    <div class="load-search">
                      <div class="load-search-data">
                        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                      </div>
                    </div>
                    <table class="table table-sm">
                      <thead>
                        <tr>
                          <th class="text-black-50"></th>
                          <th class="text-black-50">INTERNAL REFERENCE</th>
                          <th class="text-black-50">IMAGE</th>
                          <th class="text-black-50">VARIENT</th>
                          <th class="text-black-50">PRICE </th>
                          <th />
                        </tr>
                      </thead>
                      <tbody>
                        <t t-foreach="docs.product_variant_ids" t-as="var">
                          <div class="row variants" t-if="var.id in not_id and var.product_tmpl_id._is_combination_possible(var.product_template_attribute_value_ids)" t-att-data-oe-id = "var.id">
                            <tr class="clickable variants" t-att-data-oe-id = "var.id" style='height: 75px'>
                              <td>
                                <label class="deselect-variants">
                                  <input type="checkbox"/>
                                  <span class="check-modal"></span>
                                </label>
                              </td>
                              <td class="slid-up-table">
                                <span class="text-muted" t-if="var.default_code">
                                  <t t-esc="var.default_code" />
                                </span>
                              </td>
                              <td class="slid-up-table">
                                <span t-field="var.image_1920" t-options="{'widget': 'image', 'class': 'img-rounded img-rounded o_image_64_max'}" />
                              </td>
                              <td>
                                <label class="deselect-variants justify-content-center">
                                  <div class="variants-s">
                                    <t t-foreach="var.product_template_attribute_value_ids" t-as="attr">
                                      <span class="badge badge-pill badge-secondary mx-1 ps-1" t-att-data-varient_id='var.id'
                                        t-att-data-custom_id='attr.id' >
                                        <t t-esc="attr.display_name" />
                                      </span>
                                    </t>
                                  </div>
                                </label>
                                <t t-foreach="var.product_template_attribute_value_ids" t-as="attr">
                                  <t t-if="attr.is_custom == True">
                                    <input type="text" class="text-center quick_order_custom_text d-none"
                                      t-att-data-product_varient_id = 'var.id'
                                      t-att-data-custom_product_template_attribute_value_id='attr.id'
                                      id="custom-text" t-att-placeholder='attr.display_name' style='width: 190px'></input>
                                  </t>
                                </t>
                              </td>
                              <td>
                                <small class="text-muted">
                                  <span t-esc="var.lst_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                  <span itemprop="price" style="display:none;" t-esc="var.list_price" />
                                  <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name" />
                                </small>
                              </td>
                            </tr>
                          </div>
                        </t>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <p class="variants-error alert alert-danger">Please select at least one variant</p>
              <button type="button" class="btn btn-primary" id="addToList">Add To List</button>
              <button type="button" class="btn btn-secondary close-m" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </template>

    <template id="add_to_cart_mutliple">
      <t t-set="table_hreader_render" t-value="True if request.httprequest.full_path.startswith('/quickorder/shoppinglist') else False"/>
      <div class="table-content p-1" id="table_added" style="margin: 4px 0px 8px 0px;box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);">
        <div t-if="order_quicks">
          <t t-set="order_quicks" t-value="order_quicks"/>
        </div>
        <div t-if="shopping_lists">
          <t t-set="order_quicks" t-value="shopping_lists.quick_order_line"/>
        </div>
        <div class="table-responsive-mobile">
          <table class="table table-hover table_order" t-att-data_id="id">
            <thead t-if="table_hreader_render">
              <tr>
                <th class="text-black-50">PRODUCT</th>
                <th class="text-black-50"></th>
                <th class="text-black-50 text-center-data">QUANTITY</th>
                <th class="text-black-50 text-center-data">UNIT PRICE</th>
                <th class="text-black-50 text-center-data">SUB TOTAL</th>
              </tr>
            </thead>
            <tbody class="main_add_to_cart">
              <t t-call="quick_order.add_to_cart_mutliple_body" />
            </tbody>
          </table>
        </div>
        <div>
          <tr id="tr">
            <td colspan="6">
              <div class="d-flex p-3" style="justify-content: space-between;margin: 0px;border-top: 1px solid #dee2e6;padding: 12px 0px;">
                <button t-if="table_hreader_render" t-att-style="'display:block;' if order_quicks else 'display:none;'" class="btn btn-primary" id="create_order">Create Order</button>
                <div t-if="not table_hreader_render" class="dl-all">
                  <a class="text-black-50 clear_all" href="#" t-att-style="'font-weight: bold;    text-decoration: none !important;' if order_quicks else 'display:none;'" >
                    <span class="fa fa-trash" />
                    Clear all
                  </a>
                </div>
                <div class="total float-end pt-1">Total : <t t-esc="round(sum([compute_currency(price.product_id.lst_price) for price in order_quicks]), 2)" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                  <p style="margin: 0px;">Total Qty. : </p>
                </div>
              </div>
              <div t-if="not table_hreader_render" class="d-flex p-3" style="justify-content: flex-end;margin:0px;">
                <div t-if="not shopping_lists" class="me-2">
                  <t t-call="quick_order.shopping_list_button" />
                </div>
                <div t-if="shopping_lists"></div>
                <t t-call="quick_order.add_to_shopping_list_model" />
                <button class="btn btn-primary" id="create_order">Create Order</button>
              </div>
            </td>
          </tr>
        </div>
      </div>
    </template>

  <template id="add_to_cart_mutliple_body">
    <t t-foreach="order_quicks" t-as="product" t-if="order_quicks">
      <t t-set="price_list" t-value="website._get_current_pricelist()" />
      <t t-set="combination_info" t-value="product.product_id.product_tmpl_id._get_combination_info(product_id=product.product_id.id, add_qty=product.quantity)"/>
      <tr t-att-item_id="product.product_id.id" t-att-temp_id="product.product_id.product_tmpl_id.id" t-att-line_id="product.id" t-att-data_id="id" t-if="product.product_id.id in product_r">
        <t t-set="table_hreader_render" t-value="True if request.httprequest.full_path.startswith('/quickorder/shoppinglist') else False"/>
        <td style="vertical-align: middle;">
          <div class="slid-up-table">
            <t t-set="img_class" t-value="'img-rounded o_image_64_max' if table_hreader_render else 'img-rounded'" />
            <figure style='margin: auto;'>
              <a t-attf-href="/shop/product/#{ slug(product.product_id.product_tmpl_id) }">
                <span t-field="product.product_id.image_1920" t-options="{'widget': 'image', 'class': img_class, 'style': 'width:100px'}" />
              </a>
            </figure>
          </div>
        </td>
        <td>
          <div class="slid-up-table">
            <a t-attf-href="/shop/product/#{ slug(product.product_id.product_tmpl_id) }" style="font-weight: bold;">
              <t t-esc="product.product_id.name" />

            </a>
            <p t-if="product.product_id.attribute_line_ids" style="margin-bottom: 0px;font-size:13px">
              <t t-esc="product.description" t-options="{'widget': 'html'}" />
              <t t-foreach="product.product_id.product_template_attribute_value_ids" t-as="attr">
                <t t-if="attr.is_custom != True">
                  <t t-esc="attr.display_name"/>.<br/>
                </t>
                <t t-else="">
                  <input type="text" class="d-none quick_custom_value"
                    t-att-data-custom_product_template_attribute_value_id='attr.id'
                    t-att-value='product._get_custom_value(attr.product_attribute_value_id.id)' t-att-data-attribute_value_name='attr.name' />
                </t>
              </t>
            </p>
            <a class="delete_product text-danger d-none d-md-block">
              <span class="fa fa-trash" style='font-size: 16px;'>
                <span>Remove</span>
              </span>
            </a>
          </div>
        </td>
        <td style="vertical-align: middle;">
          <div class="slid-up-table">
            <div class="input-group input-group-sm" style='justify-content: center;' >
              <div class="input-group-prepend d-none d-sm-block">
                <a t-attf-href="#" class="mb8 input-group-text add-product" id="minus" style="height: 35px;width: 35px;border: 1px solid #c2c2c2;margin-bottom:0px !important;text-decoration: none;">
                  <i class="fa fa-minus"></i>
                </a>
              </div>
              <input class="allow_out_of_stock d-none" t-att-value="'1' if product.product_id.allow_out_of_stock_order else None"/>
              <input class="free_qty d-none" t-att-value="product.sudo().product_id.free_qty - product.sudo().product_id._get_cart_qty()"/>
              <input type="number" class="border form-control qunatity-product" style="height: 35px;max-width: 35px" id="qunatity" min="1" t-att-value="product.quantity" t-att-data-max="int(product.product_id.free_qty - product.product_id._get_cart_qty()) if (product.product_id.free_qty - product.product_id._get_cart_qty()) and not product.product_id.allow_out_of_stock_order else None"/>
              <div class="input-group-append d-none d-sm-block">
                <a t-attf-href="#" class="mb8 input-group-text float_left add-product" id="plus" style="height: 35px;width: 35px;border: 1px solid #c2c2c2; margin-bottom:0px !important;text-decoration: none;">
                  <i class="fa fa-plus"></i>
                </a>
              </div>
            </div>
            <div class="quick_order_stock"/>
          </div>
        </td>
        <td id="lst_price text-center-data" style="vertical-align: middle;text-align: center;">
          <div class="slid-up-table">
            <t t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website._get_current_pricelist().currency_id, 'from_currency': website.currency_id, 'style': 'font-size:14px'}"/>
          </div>
