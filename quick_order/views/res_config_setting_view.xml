    <record id="res_config_setting_quick_order_form" model="ir.ui.view">
      <field name="name">res.config.setting.quick.order.form</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="website.res_config_settings_view_form" />
      <field name="arch" type="xml">
        <block id="website_info_settings" position="after">
          <h2>Quick Order</h2>
          <div class="row mt16 o_settings_container" id="website_quick_order">
            <div class="col-12 col-lg-6 o_setting_box" id="quick_order_config_settings">
              <div class="o_setting_right_pane">
                <label for="get_quick_form" string="Quick Order Messages"/>
                <div class="text-muted" style="font-size:12px;" >
                  You can configure translatable message to be displayed on website                
                </div>
                <div class="content-group">
                  <div class="row">
                    <button string='Quick Order Messages' type="object" name="get_quick_form" class="btn btn-link fa text-start fa-language btn-lg ps-2" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </block>
      </field>
    </record>
  </data>
</odoo>
