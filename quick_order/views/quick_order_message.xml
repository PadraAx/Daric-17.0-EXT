    <record id="quick_order_message_from_view" model="ir.ui.view">
      <field name="name">quick_order message from view</field>
      <field name="model">quick.order.message</field>
      <field name="type">form</field>
      <field name="priority" eval="1" />
      <field name="arch" type="xml">
        <form create="0" delete="0">
          <sheet>
            <group col="1">
              <field name="website_id" />
              <field name="message_on_empty_order_list" />
              <field name="message_on_product_search" />
              <field name="message_on_empty_shopping_list" />
              <field name="message_on_delete_all_products" />
              <field name="empty_shopping_list_submit" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="quick_order_message_tree_view" model="ir.ui.view">
      <field name="name">quick_order message tree view</field>
      <field name="model">quick.order.message</field>
      <field name="arch" type="xml">
        <tree>
          <field name="website_id" />
        </tree>
      </field>
    </record>

    <record id="quick_order_message_action" model="ir.actions.act_window">
      <field name="name">Quick Order message</field>
      <field name="res_model">quick.order.message</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="quick_order_message_sub_menu" name="Quick Order Message" parent="quick_order_main_menu" action="quick_order_message_action" />


    <record id="quick_order_message_demo" model="quick.order.message">
      <field name="name">Quick Order Message</field>
    </record>
  </data>
</odoo>
