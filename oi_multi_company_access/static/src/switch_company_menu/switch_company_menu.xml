<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.SwitchCompanyItem" t-inherit-mode="extension"> 
		<xpath expr="//div[@role='menuitemcheckbox']" position="attributes">
        	<attribute name="t-if">!multi_company_access</attribute>
    	</xpath>        
		<xpath expr="//div[@role='button']" position="attributes">
        	<attribute name="t-on-click" />
			<attribute name="t-on-click.stop">() => this.logIntoCompany()</attribute>
    	</xpath>        
    </t>

</templates>