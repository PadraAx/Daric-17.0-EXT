<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Severity data -->
        <record id="risk_criteria_severity_1" model="oi_risk_management.risk_criteria">
            <field name="type">severity</field>
            <field name="name">Catastrophic</field>
            <field name="score">5</field>
            <field name="color">9</field>
            <field name="ehs">Multiple fatality</field>
            <field name="value">&gt; OR 250M</field>
            <field name="reputation">Massive damage to reputation e.g. international media coverage affecting the government or our ability to achieve business objectives</field>
        </record>
        <record id="risk_criteria_severity_2" model="oi_risk_management.risk_criteria">
            <field name="type">severity</field>
            <field name="name">Major</field>
            <field name="score">4</field>
            <field name="color">1</field>
            <field name="ehs">Single fatality</field>
            <field name="value">&lt; OR 250M</field>
            <field name="reputation">Significant but recoverable reduction in credibility and reputation</field>
        </record>
        <record id="risk_criteria_severity_3" model="oi_risk_management.risk_criteria">
            <field name="type">severity</field>
            <field name="name">Moderate</field>
            <field name="score">3</field>
            <field name="color">2</field>
            <field name="ehs">Lost time illness</field>
            <field name="value">&lt; OR 50M</field>
            <field name="reputation">Temporary (less than 1yr) reduction in credibility and reputation</field>
        </record>
        <record id="risk_criteria_severity_4" model="oi_risk_management.risk_criteria">
            <field name="type">severity</field>
            <field name="name">Low</field>
            <field name="score">2</field>
            <field name="color">3</field>
            <field name="ehs">Medical treatment</field>
            <field name="value">&lt; OR 10M</field>
            <field name="reputation">Short term (less than 3 months) or limited reputation damage</field>
        </record>
        <record id="risk_criteria_severity_5" model="oi_risk_management.risk_criteria">
            <field name="type">severity</field>
            <field name="name">Minor</field>
            <field name="score">1</field>
            <field name="color">10</field>
            <field name="ehs">Minor injury / First aid</field>
            <field name="value">&lt; OR 2M</field>
            <field name="reputation">Isolated complaints</field>
        </record>
    
        <!-- Likelihood data -->
        <record id="risk_criteria_likelihood_1" model="oi_risk_management.risk_criteria">
            <field name="type">likelihood</field>
            <field name="name">Expected</field>
            <field name="score">5</field>
            <field name="color">9</field>
            <field name="percentage">&gt; 90%</field>
            <field name="frequency">Almost yearly</field>
        </record>
        <record id="risk_criteria_likelihood_2" model="oi_risk_management.risk_criteria">
            <field name="type">likelihood</field>
            <field name="name">Likely</field>
            <field name="score">4</field>
            <field name="color">1</field>
            <field name="percentage">&lt; or equal 90%</field>
            <field name="frequency">Every 2-3 years</field>
        </record>
        <record id="risk_criteria_likelihood_3" model="oi_risk_management.risk_criteria">
            <field name="type">likelihood</field>
            <field name="name">Possibly</field>
            <field name="score">3</field>
            <field name="color">2</field>
            <field name="percentage">&lt; or equal 25%</field>
            <field name="frequency">Every 4-3 years</field>
        </record>
        <record id="risk_criteria_likelihood_4" model="oi_risk_management.risk_criteria">
            <field name="type">likelihood</field>
            <field name="name">Unlikely</field>
            <field name="score">2</field>
            <field name="color">3</field>
            <field name="percentage">&lt; or equal 10%</field>
            <field name="frequency">Every 10-19 years</field>
        </record>
        <record id="risk_criteria_likelihood_5" model="oi_risk_management.risk_criteria">
            <field name="type">likelihood</field>
            <field name="name">Rare</field>
            <field name="score">1</field>
            <field name="color">10</field>
            <field name="percentage">&lt; 5%</field>
            <field name="frequency">Every 20 years and beyond</field>
        </record>

        <!-- Control effectiveness data -->
        <record id="risk_criteria_control_effectiveness_1" model="oi_risk_management.risk_criteria">
            <field name="type">control_effectiveness</field>
            <field name="name">Highly Ineffective</field>
            <field name="score">5</field>
            <field name="color">9</field>
            <field name="description">Controls are non-existent or have major deviations and don't operate as intended</field>
        </record>
        <record id="risk_criteria_control_effectiveness_2" model="oi_risk_management.risk_criteria">
            <field name="type">control_effectiveness</field>
            <field name="name">Ineffective</field>
            <field name="score">4</field>
            <field name="color">1</field>
            <field name="description">Limited controls in place, with significant opportunities or improvement identified</field>
        </record>
        <record id="risk_criteria_control_effectiveness_3" model="oi_risk_management.risk_criteria">
            <field name="type">control_effectiveness</field>
            <field name="name">Significant Improvement Needed</field>
            <field name="score">3</field>
            <field name="color">2</field>
            <field name="description">Key control in place, with significant opportunities for improvement identified</field>
        </record>
        <record id="risk_criteria_control_effectiveness_4" model="oi_risk_management.risk_criteria">
            <field name="type">control_effectiveness</field>
            <field name="name">Limited Improvement Needed</field>
            <field name="score">2</field>
            <field name="color">3</field>
            <field name="description">Control properly designed and operating, with opportunities or imported identified</field>
        </record>
        <record id="risk_criteria_control_effectiveness_5" model="oi_risk_management.risk_criteria">
            <field name="type">control_effectiveness</field>
            <field name="name">Effective</field>
            <field name="score">1</field>
            <field name="color">10</field>
            <field name="description">Controls properly designed and operating as intended</field>
        </record>

        
