<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- list of risks department wizard view -->
        <record id="oi_risk_management.list_of_risks_department_wizard" model="ir.ui.view">
            <field name="name">oi_risk_management.list.of.risks.department.wizard</field>
            <field name="model">oi_risk.list_of_risks_department_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="department_id"/>
                    </group>
                    <footer>
                        <button string="Generate" class="oe_highlight" type="object" name="generate"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>